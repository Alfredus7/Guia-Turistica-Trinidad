@model guia_turistico.Models.SitiosTuristicos

@{
    ViewData["Title"] = "Editar Sitio Turístico";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-edit me-2"></i>Editar Sitio Turístico
                    </h1>
                    <p class="lead mb-0 opacity-75">Modifica la información del sitio turístico seleccionado</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Edit" id="siteForm" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Sección del Mapa -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header card-header-gradient py-3">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-map me-2"></i>Ubicación en el Mapa
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Mapa -->
                        <div class="col-lg-8">
                            <div id="map" style="height: 450px; min-height: 450px;"></div>
                        </div>

                        <!-- Panel de control del mapa -->
                        <div class="col-lg-4 border-start bg-panel">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-crosshairs me-2 text-primary"></i>Actualizar Ubicación
                                </h5>

                                <div class="mb-4">
                                    <div class="alert alert-info mb-3">
                                        <small>
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Instrucciones:</strong> Haz clic en el mapa para cambiar la ubicación.
                                            Puedes arrastrar el marcador para ajustar la posición.
                                        </small>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="button"
                                                class="btn btn-outline-primary"
                                                onclick="mapManager.centerToTrinidad()">
                                            <i class="fas fa-home me-2"></i>Centrar en Trinidad
                                        </button>
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                onclick="mapManager.restoreOriginalLocation()">
                                            <i class="fas fa-undo me-2"></i>Restaurar ubicación original
                                        </button>
                                    </div>
                                </div>

                                <!-- Coordenadas actuales -->
                                <div class="border rounded-3 p-3 bg-light-subtle">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-globe-americas me-2 text-success"></i>Coordenadas
                                    </h6>

                                    <div class="row g-2">
                                        <div class="col-6">
                                            <label class="form-label small text-muted mb-1">Latitud</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-arrows-alt-v text-primary"></i>
                                                </span>
                                                <input type="text"
                                                       id="latDisplay"
                                                       class="form-control form-control-sm"
                                                       value="@Model.Latitud.ToString("0.000000")"
                                                       readonly>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label small text-muted mb-1">Longitud</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-arrows-alt-h text-primary"></i>
                                                </span>
                                                <input type="text"
                                                       id="lngDisplay"
                                                       class="form-control form-control-sm"
                                                       value="@Model.Longitud.ToString("0.000000")"
                                                       readonly>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Badge de estado -->
                                    <div class="mt-3">
                                        <span class="badge badge-success px-3 py-2" id="locationStatus">
                                            <i class="fas fa-check-circle me-1"></i>Ubicación establecida
                                        </span>
                                        <span class="badge badge-info px-3 py-2 ms-2" id="originalLocationBadge" style="display: none;">
                                            <i class="fas fa-history me-1"></i>Ubicación original
                                        </span>
                                    </div>

                                    <!-- Campos ocultos -->
                                    <input type="hidden" asp-for="Latitud" id="Latitud" value="@Model.Latitud" />
                                    <input type="hidden" asp-for="Longitud" id="Longitud" value="@Model.Longitud" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Principal del Sitio -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Información en Español -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-flag me-2"></i>Información en Español
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-2 text-muted"></i>Nombre del Sitio
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Catedral de la Santísima Trinidad"
                                       required
                                       id="nombreInput"
                                       maxlength="100">
                                <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">
                                    <span id="nombreCounter">@Model.Nombre?.Length/100</span> - Nombre oficial del sitio turístico
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Descripcion" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Descripción
                                </label>
                                <div class="position-relative">
                                    <textarea asp-for="Descripcion"
                                              class="form-control"
                                              rows="5"
                                              placeholder="Describe el sitio turístico, su historia, características principales..."
                                              required
                                              id="descripcionInput"
                                              maxlength="1000"></textarea>
                                    <div class="char-counter">@Model.Descripcion?.Length/1000</div>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">Información detallada para los visitantes</div>
                            </div>

                            <div class="mb-0">
                                <label asp-for="Direccion" class="form-label fw-semibold">
                                    <i class="fas fa-map-marker-alt me-2 text-muted"></i>Dirección Física
                                </label>
                                <input asp-for="Direccion"
                                       class="form-control"
                                       placeholder="Ej: Plaza Principal, Trinidad, Beni"
                                       id="direccionInput"
                                       maxlength="200">
                                <span asp-validation-for="Direccion" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">
                                    <span id="direccionCounter">@Model.Direccion?.Length/200</span> - Dirección exacta para visitantes
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Traducciones y Tipo -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-language me-2"></i>Información Multilingüe
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Pestañas para idiomas -->
                            <ul class="nav nav-tabs mb-4" id="langTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active text-dark"
                                            id="english-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#english"
                                            type="button"
                                            role="tab">
                                        <i class="fas fa-language me-1"></i> Inglés
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link text-dark"
                                            id="portuguese-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#portuguese"
                                            type="button"
                                            role="tab">
                                        <i class="fas fa-language me-1"></i> Portugués
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="langTabsContent">
                                <!-- Inglés -->
                                <div class="tab-pane fade show active"
                                     id="english"
                                     role="tabpanel"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombreIngles" class="form-label fw-semibold">
                                            Nombre en Inglés
                                        </label>
                                        <input asp-for="NombreIngles"
                                               class="form-control"
                                               placeholder="Ej: Holy Trinity Cathedral"
                                               id="nombreInglesInput"
                                               maxlength="100">
                                        <span asp-validation-for="NombreIngles" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            <span id="nombreInglesCounter">@Model.NombreIngles?.Length/100</span>
                                        </div>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionIngles" class="form-label fw-semibold">
                                            Descripción en Inglés
                                        </label>
                                        <div class="position-relative">
                                            <textarea asp-for="DescripcionIngles"
                                                      class="form-control"
                                                      rows="4"
                                                      placeholder="Description in English..."
                                                      id="descripcionInglesInput"
                                                      maxlength="1000"></textarea>
                                            <div class="char-counter">@Model.DescripcionIngles?.Length/1000</div>
                                        </div>
                                        <span asp-validation-for="DescripcionIngles" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <!-- Portugués -->
                                <div class="tab-pane fade"
                                     id="portuguese"
                                     role="tabpanel"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombrePortugues" class="form-label fw-semibold">
                                            Nombre en Portugués
                                        </label>
                                        <input asp-for="NombrePortugues"
                                               class="form-control"
                                               placeholder="Ej: Catedral da Santíssima Trindade"
                                               id="nombrePortuguesInput"
                                               maxlength="100">
                                        <span asp-validation-for="NombrePortugues" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            <span id="nombrePortuguesCounter">@Model.NombrePortugues?.Length/100</span>
                                        </div>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionPortugues" class="form-label fw-semibold">
                                            Descripción en Portugués
                                        </label>
                                        <div class="position-relative">
                                            <textarea asp-for="DescripcionPortugues"
                                                      class="form-control"
                                                      rows="4"
                                                      placeholder="Descrição em português..."
                                                      id="descripcionPortuguesInput"
                                                      maxlength="1000"></textarea>
                                            <div class="char-counter">@Model.DescripcionPortugues?.Length/1000</div>
                                        </div>
                                        <span asp-validation-for="DescripcionPortugues" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Selector de Tipo -->
                            <div class="mt-4 pt-3 border-top">
                                <label asp-for="TipoId" class="form-label fw-semibold">
                                    <i class="fas fa-tags me-2 text-muted"></i>Tipo de Sitio
                                </label>
                                <select asp-for="TipoId"
                                        class="form-select"
                                        asp-items="ViewBag.TipoId"
                                        required
                                        id="tipoSelect">
                                    <option value="" selected disabled>Selecciona un tipo</option>
                                </select>
                                <span asp-validation-for="TipoId" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">Categoría del sitio turístico</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Auto-translation helper -->
            <div class="alert alert-info mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-robot fa-2x me-3 text-info"></i>
                    <div>
                        <h6 class="fw-semibold mb-1">Asistente de traducción</h6>
                        <p class="mb-0 small">
                            ¿Necesitas ayuda con las traducciones?
                            <button type="button"
                                    class="btn btn-sm btn-outline-primary ms-2"
                                    onclick="translationHelper.suggestTranslations()">
                                <i class="fas fa-magic me-1"></i>Generar sugerencias
                            </button>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar los cambios?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de actualizar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-primary btn-lg px-5" onclick="formManager.restoreOriginal()">
                                <i class="fas fa-undo me-2"></i>Restaurar Original
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Actualizar Sitio
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Leaflet CSS & JS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/translationHelper.js" asp-append-version="true"></script>
    <script>
        // Módulo para manejo del mapa
        const mapManager = {
            map: null,
            marker: null,
            trinidadLat: -14.8350,
            trinidadLng: -64.9030,
            originalLat: @Model.Latitud,
            originalLng: @Model.Longitud,
            hasLocationChanged: false,

            init() {
                // Crear mapa centrado en la ubicación original del sitio
                this.map = L.map('map', {
                    center: [this.originalLat, this.originalLng],
                    zoom: 13,
                    zoomControl: true
                });

                // Capa de mapa
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
                    maxZoom: 19
                }).addTo(this.map);

                // Marcador en la ubicación original
                this.marker = L.marker([this.originalLat, this.originalLng], {
                    draggable: true,
                    title: 'Ubicación del sitio',
                    alt: 'Marcador de ubicación'
                }).addTo(this.map);

                // Eventos
                this.map.on('click', (e) => {
                    this.updateMarkerPosition(e.latlng);
                    this.hasLocationChanged = true;
                    this.updateLocationBadge();
                });

                this.marker.on('dragend', (e) => {
                    this.updateMarkerPosition(e.target.getLatLng());
                    this.hasLocationChanged = true;
                    this.updateLocationBadge();
                });

                // Estado inicial
                this.updateCoordinatesDisplay(this.originalLat, this.originalLng);
                this.updateLocationBadge();
            },

            updateMarkerPosition(latlng) {
                this.marker.setLatLng(latlng);
                this.updateCoordinatesDisplay(latlng.lat, latlng.lng);

                document.getElementById('Latitud').value = latlng.lat.toFixed(6);
                document.getElementById('Longitud').value = latlng.lng.toFixed(6);

                this.showLocationFeedback(`Ubicación actualizada: ${latlng.lat.toFixed(6)}, ${latlng.lng.toFixed(6)}`);
                this.map.panTo(latlng);
            },

            updateCoordinatesDisplay(lat, lng) {
                document.getElementById('latDisplay').value = lat.toFixed(6);
                document.getElementById('lngDisplay').value = lng.toFixed(6);
            },

            centerToTrinidad() {
                this.map.setView([this.trinidadLat, this.trinidadLng], 13);
                this.updateMarkerPosition({ lat: this.trinidadLat, lng: this.trinidadLng });
                this.hasLocationChanged = true;
                this.updateLocationBadge();
                this.showLocationFeedback('Centrado en Trinidad, Beni');
            },

            restoreOriginalLocation() {
                this.map.setView([this.originalLat, this.originalLng], 13);
                this.updateMarkerPosition({ lat: this.originalLat, lng: this.originalLng });
                this.hasLocationChanged = false;
                this.updateLocationBadge();
                this.showLocationFeedback('Ubicación restaurada a la original');
            },

            updateLocationBadge() {
                const originalBadge = document.getElementById('originalLocationBadge');
                if (this.hasLocationChanged) {
                    originalBadge.style.display = 'inline-block';
                } else {
                    originalBadge.style.display = 'none';
                }
            },

            showLocationFeedback(message, type = 'success') {
                const statusBadge = document.getElementById('locationStatus');

                if (type === 'error') {
                    statusBadge.className = 'badge bg-danger px-3 py-2';
                    statusBadge.innerHTML = `<i class="fas fa-exclamation-circle me-1"></i>${message}`;
                } else {
                    statusBadge.className = 'badge badge-success px-3 py-2';
                    statusBadge.innerHTML = `<i class="fas fa-check-circle me-1"></i>${message}`;

                    setTimeout(() => {
                        statusBadge.className = 'badge badge-success px-3 py-2';
                        statusBadge.innerHTML = '<i class="fas fa-check-circle me-1"></i>Ubicación establecida';
                    }, 3000);
                }

                statusBadge.style.transform = 'scale(1.05)';
                setTimeout(() => statusBadge.style.transform = 'scale(1)', 300);
            }
        };

        // Módulo para manejo del formulario
        const formManager = {
            originalData: {},
            formModified: false,

            init() {
                // Guardar datos originales
                this.saveOriginalData();
                this.initCharCounters();
                this.initFormValidation();
                this.initTooltips();
                this.initChangeDetection();
                this.cleanLocalStorage();
            },

            saveOriginalData() {
                // Guardar todos los valores originales del formulario
                const form = document.getElementById('siteForm');
                const formData = new FormData(form);
                this.originalData = {};

                for (let [key, value] of formData.entries()) {
                    this.originalData[key] = value;
                }

                // Guardar también coordenadas
                this.originalData['Latitud'] = @Model.Latitud;
                this.originalData['Longitud'] = @Model.Longitud;
            },

            initCharCounters() {
                const fields = [
                    { id: 'nombreInput', counterId: 'nombreCounter', max: 100 },
                    { id: 'direccionInput', counterId: 'direccionCounter', max: 200 },
                    { id: 'nombreInglesInput', counterId: 'nombreInglesCounter', max: 100 },
                    { id: 'nombrePortuguesInput', counterId: 'nombrePortuguesCounter', max: 100 },
                    { id: 'descripcionInput', max: 1000 },
                    { id: 'descripcionInglesInput', max: 1000 },
                    { id: 'descripcionPortuguesInput', max: 1000 }
                ];

                fields.forEach(field => {
                    const element = document.getElementById(field.id);
                    if (element) {
                        const counter = field.counterId ?
                            document.getElementById(field.counterId) :
                            element.parentNode.querySelector('.char-counter');

                        const updateCounter = () => {
                            const length = element.value.length;
                            if (counter) {
                                counter.textContent = `${length}/${field.max}`;
                                if (length > field.max * 0.9) {
                                    counter.style.color = 'var(--warning-color)';
                                } else if (length > field.max) {
                                    counter.style.color = 'var(--danger-color)';
                                } else {
                                    counter.style.color = 'var(--neutral-dark)';
                                }
                            }

                            if (length > field.max) {
                                element.classList.add('is-invalid');
                            } else {
                                element.classList.remove('is-invalid');
                            }

                            // Detectar cambios
                            this.checkForChanges();
                        };

                        element.addEventListener('input', updateCounter);
                        element.addEventListener('blur', updateCounter);
                        updateCounter();
                    }
                });
            },

            initChangeDetection() {
                // Detectar cambios en todos los campos
                const form = document.getElementById('siteForm');
                const inputs = form.querySelectorAll('input, textarea, select');

                inputs.forEach(input => {
                    input.addEventListener('input', () => this.checkForChanges());
                    input.addEventListener('change', () => this.checkForChanges());
                });
            },

            checkForChanges() {
                let hasChanges = false;
                const form = document.getElementById('siteForm');
                const formData = new FormData(form);

                for (let [key, value] of formData.entries()) {
                    if (this.originalData[key] !== value) {
                        hasChanges = true;
                        break;
                    }
                }

                // Verificar coordenadas
                const currentLat = document.getElementById('Latitud').value;
                const currentLng = document.getElementById('Longitud').value;
                if (currentLat != this.originalData['Latitud'] || currentLng != this.originalData['Longitud']) {
                    hasChanges = true;
                }

                this.formModified = hasChanges;
                return hasChanges;
            },

            initFormValidation() {
                const form = document.getElementById('siteForm');
                const submitBtn = document.getElementById('submitBtn');

                form.addEventListener('submit', (e) => {
                    // Validar coordenadas
                    const lat = document.getElementById('Latitud').value;
                    const lng = document.getElementById('Longitud').value;

                    if (!lat || !lng) {
                        e.preventDefault();
                        translationHelper.showGlobalToast('Por favor, selecciona una ubicación en el mapa', 'danger');

                        const mapContainer = document.querySelector('.card');
                        mapContainer.style.borderColor = 'var(--danger-color)';
                        mapContainer.style.boxShadow = '0 0 0 0.25rem rgba(220,53,69,.25)';

                        setTimeout(() => {
                            mapContainer.style.borderColor = '';
                            mapContainer.style.boxShadow = '';
                        }, 2000);
                        return false;
                    }

                    // Validar campos requeridos
                    const requiredFields = form.querySelectorAll('[required]');
                    let isValid = true;
                    requiredFields.forEach(field => {
                        if (!field.value.trim()) {
                            field.classList.add('is-invalid');
                            isValid = false;
                        }
                    });

                    if (!isValid) {
                        e.preventDefault();
                        translationHelper.showGlobalToast('Por favor, completa todos los campos requeridos', 'danger');
                        return false;
                    }

                    // Mostrar estado de carga
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Actualizando...';
                    submitBtn.disabled = true;
                    submitBtn.classList.add('btn-loading');
                    return true;
                });
            },

            initTooltips() {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            },

            cleanLocalStorage() {
                // Eliminar cualquier dato de borrador previo
                localStorage.removeItem('sitioTuristicoEditDraft');
                // También eliminar otros posibles borradores relacionados
                const keys = Object.keys(localStorage);
                keys.forEach(key => {
                    if (key.includes('sitio') || key.includes('borrador') || key.includes('draft')) {
                        localStorage.removeItem(key);
                    }
                });
            },

            restoreOriginal() {
                if (this.checkForChanges()) {
                    if (!confirm('¿Estás seguro de que deseas restaurar los valores originales? Se perderán todos los cambios no guardados.')) {
                        return;
                    }
                }

                // Restaurar valores del formulario desde originalData
                for (const [key, value] of Object.entries(this.originalData)) {
                    const element = document.querySelector(`[name="${key}"]`);
                    if (element) {
                        element.value = value;
                    }
                }

                // Restaurar coordenadas específicamente
                document.getElementById('Latitud').value = this.originalData['Latitud'];
                document.getElementById('Longitud').value = this.originalData['Longitud'];
                document.getElementById('latDisplay').value = parseFloat(this.originalData['Latitud']).toFixed(6);
                document.getElementById('lngDisplay').value = parseFloat(this.originalData['Longitud']).toFixed(6);

                // Restaurar ubicación en el mapa
                mapManager.restoreOriginalLocation();

                // Restaurar contadores
                this.initCharCounters();

                // Limpiar validaciones
                document.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });

                const submitBtn = document.getElementById('submitBtn');
                submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Actualizar Sitio';
                submitBtn.disabled = false;
                submitBtn.classList.remove('btn-loading');

                translationHelper.showGlobalToast('Valores originales restaurados', 'info');
                this.formModified = false;
            }
        };

        // Inicialización cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            mapManager.init();
            formManager.init();
        });
    </script>
