@model guia_turistico.Models.SitiosTuristicos

@{
    ViewData["Title"] = "Editar Sitio Turístico";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-edit me-2"></i>Editar Sitio Turístico
                    </h1>
                    <p class="lead mb-0 opacity-75">Modifica la información del sitio turístico seleccionado</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Edit" id="siteForm" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Sección del Mapa -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary bg-gradient py-3 text-white">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-map me-2"></i>Ubicación en el Mapa
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Mapa -->
                        <div class="col-lg-8">
                            <div id="map" style="height: 450px; min-height: 450px;"></div>
                        </div>

                        <!-- Panel de control del mapa -->
                        <div class="col-lg-4 border-start bg-light">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-crosshairs me-2 text-primary"></i>Actualizar Ubicación
                                </h5>

                                <div class="mb-3">
                                    <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        <small>
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Instrucciones:</strong> Haz clic en el mapa para cambiar la ubicación.
                                            Puedes arrastrar el marcador para ajustar la posición.
                                        </small>
                                    </div>

                                    <div class="d-grid gap-2 mb-3">
                                        <button type="button"
                                                class="btn btn-outline-primary"
                                                id="centerToTrinidadBtn">
                                            <i class="fas fa-home me-2"></i>Centrar en Trinidad
                                        </button>
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                id="restoreOriginalLocationBtn">
                                            <i class="fas fa-undo me-2"></i>Restaurar ubicación original
                                        </button>
                                    </div>
                                </div>

                                <!-- Coordenadas actuales -->
                                <div class="border rounded-3 p-3 bg-white">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-globe-americas me-2 text-success"></i>Coordenadas
                                    </h6>

                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <label class="form-label small text-muted mb-1">Latitud</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-arrows-alt-v text-primary"></i>
                                                </span>
                                                <input type="text"
                                                       id="latDisplay"
                                                       class="form-control form-control-sm"
                                                       value="@Model.Latitud.ToString("0.000000")"
                                                       readonly>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label small text-muted mb-1">Longitud</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-arrows-alt-h text-primary"></i>
                                                </span>
                                                <input type="text"
                                                       id="lngDisplay"
                                                       class="form-control form-control-sm"
                                                       value="@Model.Longitud.ToString("0.000000")"
                                                       readonly>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Indicador de estado -->
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success px-3 py-2 me-2" id="locationStatus">
                                            <i class="fas fa-check-circle me-1"></i>Ubicación establecida
                                        </span>
                                        <span class="badge bg-info px-3 py-2" id="originalLocationBadge" style="display: none;">
                                            <i class="fas fa-history me-1"></i>Ubicación modificada
                                        </span>
                                    </div>

                                    <!-- Campos ocultos -->
                                    <input type="hidden" asp-for="Latitud" id="Latitud" value="@Model.Latitud" />
                                    <input type="hidden" asp-for="Longitud" id="Longitud" value="@Model.Longitud" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Principal del Sitio -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Información en Español -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-flag me-2"></i>Información en Español
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-2 text-muted"></i>Nombre del Sitio *
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Catedral de la Santísima Trinidad"
                                       required
                                       maxlength="100"
                                       data-bs-toggle="tooltip"
                                       data-bs-title="Nombre oficial del sitio turístico">
                                <div class="form-text text-end">
                                    <span class="text-muted" id="nombreCounter">@Model.Nombre?.Length/100</span>
                                </div>
                                <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Descripcion" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Descripción *
                                </label>
                                <textarea asp-for="Descripcion"
                                          class="form-control"
                                          rows="5"
                                          placeholder="Ej: La catedral más antigua de la ciudad, construida en el siglo XVIII..."
                                          required
                                          maxlength="1000"
                                          data-bs-toggle="tooltip"
                                          data-bs-title="Historia y características principales del sitio"></textarea>
                                <div class="form-text text-end">
                                    <span class="text-muted" id="descripcionCounter">@Model.Descripcion?.Length/1000</span>
                                </div>
                                <span asp-validation-for="Descripcion" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-0">
                                <label asp-for="Direccion" class="form-label fw-semibold">
                                    <i class="fas fa-map-marker-alt me-2 text-muted"></i>Dirección Física
                                </label>
                                <input asp-for="Direccion"
                                       class="form-control"
                                       placeholder="Ej: Plaza Principal, Trinidad, Beni"
                                       maxlength="200"
                                       data-bs-toggle="tooltip"
                                       data-bs-title="Dirección exacta para visitantes">
                                <div class="form-text text-end">
                                    <span class="text-muted" id="direccionCounter">@Model.Direccion?.Length/200</span>
                                </div>
                                <span asp-validation-for="Direccion" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Traducciones y Tipo -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-language me-2"></i>Información Multilingüe
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Pestañas para idiomas -->
                            <ul class="nav nav-tabs mb-4" id="langTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active"
                                            id="english-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#english"
                                            type="button"
                                            role="tab"
                                            aria-controls="english"
                                            aria-selected="true">
                                        <i class="fas fa-language me-1"></i> Inglés
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link"
                                            id="portuguese-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#portuguese"
                                            type="button"
                                            role="tab"
                                            aria-controls="portuguese"
                                            aria-selected="false">
                                        <i class="fas fa-language me-1"></i> Portugués
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="langTabsContent">
                                <!-- Inglés -->
                                <div class="tab-pane fade show active"
                                     id="english"
                                     role="tabpanel"
                                     aria-labelledby="english-tab"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombreIngles" class="form-label fw-semibold">
                                            Nombre en Inglés
                                        </label>
                                        <input asp-for="NombreIngles"
                                               class="form-control"
                                               placeholder="Ej: Holy Trinity Cathedral"
                                               maxlength="100"
                                               data-bs-toggle="tooltip"
                                               data-bs-title="Traducción para visitantes internacionales">
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="nombreInglesCounter">@Model.NombreIngles?.Length/100</span>
                                        </div>
                                        <span asp-validation-for="NombreIngles" class="invalid-feedback"></span>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionIngles" class="form-label fw-semibold">
                                            Descripción en Inglés
                                        </label>
                                        <textarea asp-for="DescripcionIngles"
                                                  class="form-control"
                                                  rows="4"
                                                  placeholder="Ej: The oldest cathedral in the city, built in the 18th century..."
                                                  maxlength="1000"
                                                  data-bs-toggle="tooltip"
                                                  data-bs-title="Description for international visitors"></textarea>
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="descripcionInglesCounter">@Model.DescripcionIngles?.Length/1000</span>
                                        </div>
                                        <span asp-validation-for="DescripcionIngles" class="invalid-feedback"></span>
                                    </div>
                                </div>

                                <!-- Portugués -->
                                <div class="tab-pane fade"
                                     id="portuguese"
                                     role="tabpanel"
                                     aria-labelledby="portuguese-tab"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombrePortugues" class="form-label fw-semibold">
                                            Nombre en Portugués
                                        </label>
                                        <input asp-for="NombrePortugues"
                                               class="form-control"
                                               placeholder="Ej: Catedral da Santíssima Trindade"
                                               maxlength="100"
                                               data-bs-toggle="tooltip"
                                               data-bs-title="Tradução para visitantes brasileiros">
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="nombrePortuguesCounter">@Model.NombrePortugues?.Length/100</span>
                                        </div>
                                        <span asp-validation-for="NombrePortugues" class="invalid-feedback"></span>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionPortugues" class="form-label fw-semibold">
                                            Descripción en Portugués
                                        </label>
                                        <textarea asp-for="DescripcionPortugues"
                                                  class="form-control"
                                                  rows="4"
                                                  placeholder="Ej: A catedral mais antiga da cidade, construída no século XVIII..."
                                                  maxlength="1000"
                                                  data-bs-toggle="tooltip"
                                                  data-bs-title="Descrição para visitantes lusófonos"></textarea>
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="descripcionPortuguesCounter">@Model.DescripcionPortugues?.Length/1000</span>
                                        </div>
                                        <span asp-validation-for="DescripcionPortugues" class="invalid-feedback"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Selector de Tipo -->
                            <div class="mt-4 pt-3 border-top">
                                <label asp-for="TipoId" class="form-label fw-semibold">
                                    <i class="fas fa-tags me-2 text-muted"></i>Tipo de Sitio *
                                </label>
                                <select asp-for="TipoId"
                                        class="form-select"
                                        asp-items="ViewBag.TipoId"
                                        required
                                        data-bs-toggle="tooltip"
                                        data-bs-title="Selecciona la categoría del sitio turístico">
                                    <option value="" disabled>Selecciona un tipo</option>
                                </select>
                                <span asp-validation-for="TipoId" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones con Modal de Confirmación -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar los cambios?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de actualizar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-outline-danger btn-lg px-5"
                                    data-bs-toggle="modal" data-bs-target="#restoreModal">
                                <i class="fas fa-undo me-2"></i>Restaurar Original
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Actualizar Sitio
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación para Restaurar -->
<div class="modal fade" id="restoreModal" tabindex="-1" aria-labelledby="restoreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restoreModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Restauración
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas restaurar todos los valores originales?</p>
                <p class="text-muted small">Se perderán todos los cambios no guardados.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmRestore">
                    <i class="fas fa-undo me-2"></i>Restaurar Todo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para Mensajes -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Sistema</strong>
            <small>Ahora</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de ejemplo
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Leaflet CSS & JS (con fallback local) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""
          onerror="console.warn('No se pudo cargar Leaflet CSS, usando estilo local')" />

    <style>
        /* Estilos de fallback para Leaflet */
        .leaflet-container {
            background: #f8f9fa;
        }

        .leaflet-marker-icon {
            background-image: url('data:image/svg+xml;base64,');
            background-size: 25px 41px;
        }
    </style>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""
            onerror="console.error('Leaflet no se pudo cargar')"></script>

    <script>
        // Configuración global para Edit
        const config = {
            isTestMode: window.navigator.webdriver === true ||
                       window.location.search.includes('testmode'),
            defaultLocation: {
                lat: -14.8350,
                lng: -64.9030
            },
            originalLocation: {
                lat: @Model.Latitud,
                lng: @Model.Longitud
            },
            originalFormData: {
                Nombre: "@Html.Raw(Model.Nombre?.Replace("\"", "\\\""))",
                Descripcion: "@Html.Raw(Model.Descripcion?.Replace("\"", "\\\"").Replace("\r\n", "\\n"))",
                Direccion: "@Html.Raw(Model.Direccion?.Replace("\"", "\\\""))",
                NombreIngles: "@Html.Raw(Model.NombreIngles?.Replace("\"", "\\\""))",
                DescripcionIngles: "@Html.Raw(Model.DescripcionIngles?.Replace("\"", "\\\"").Replace("\r\n", "\\n"))",
                NombrePortugues: "@Html.Raw(Model.NombrePortugues?.Replace("\"", "\\\""))",
                DescripcionPortugues: "@Html.Raw(Model.DescripcionPortugues?.Replace("\"", "\\\"").Replace("\r\n", "\\n"))",
                TipoId: "@Model.TipoId"
            }
        };

        // Módulo para manejo del mapa en modo edición
        const mapManager = {
            map: null,
            marker: null,
            isInitialized: false,
            hasLocationChanged: false,

            init() {
                if (config.isTestMode) {
                    console.log('Modo test: mapa simplificado');
                    this.setupTestMode();
                    return;
                }

                try {
                    if (typeof L === 'undefined') {
                        console.error('Leaflet no está disponible');
                        this.showMapError();
                        return;
                    }

                    // Crear mapa centrado en la ubicación original
                    this.map = L.map('map', {
                        center: [config.originalLocation.lat, config.originalLocation.lng],
                        zoom: 13,
                        zoomControl: true,
                        preferCanvas: true
                    });

                    // Capa de mapa con fallback
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
                        maxZoom: 19,
                        errorTileUrl: 'data:image/svg+xml;base64,'
                    }).addTo(this.map);

                    // Marcador en ubicación original
                    this.marker = L.marker([config.originalLocation.lat, config.originalLocation.lng], {
                        draggable: true,
                        title: 'Ubicación del sitio',
                        alt: 'Marcador de ubicación'
                    }).addTo(this.map);

                    // Eventos
                    this.map.on('click', (e) => {
                        this.updateMarkerPosition(e.latlng);
                        this.hasLocationChanged = true;
                        this.updateLocationBadge();
                    });

                    this.marker.on('dragend', (e) => {
                        this.updateMarkerPosition(e.target.getLatLng());
                        this.hasLocationChanged = true;
                        this.updateLocationBadge();
                    });

                    // Estado inicial
                    this.updateCoordinatesDisplay(config.originalLocation.lat, config.originalLocation.lng);
                    this.isInitialized = true;

                    console.log('Mapa para edición inicializado correctamente');
                } catch (error) {
                    console.error('Error al inicializar el mapa:', error);
                    this.showMapError();
                }
            },

            setupTestMode() {
                const mapElement = document.getElementById('map');
                if (mapElement) {
                    mapElement.innerHTML = `
                        <div style="height: 100%; display: flex; align-items: center; justify-content: center; background: #f8f9fa;">
                            <div class="text-center">
                                <i class="fas fa-map-marked-alt fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Mapa en modo de pruebas</p>
                                <p class="small text-muted">Ubicación original: ${config.originalLocation.lat}, ${config.originalLocation.lng}</p>
                            </div>
                        </div>
                    `;
                }

                this.updateCoordinatesDisplay(config.originalLocation.lat, config.originalLocation.lng);
            },

            showMapError() {
                const mapElement = document.getElementById('map');
                if (mapElement) {
                    mapElement.innerHTML = `
                        <div style="height: 100%; display: flex; align-items: center; justify-content: center; background: #f8f9fa; border: 2px dashed #dee2e6;">
                            <div class="text-center">
                                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                <h6 class="text-muted">No se pudo cargar el mapa</h6>
                                <p class="small text-muted">Usando ubicación original guardada</p>
                            </div>
                        </div>
                    `;
                }

                this.updateCoordinatesDisplay(config.originalLocation.lat, config.originalLocation.lng);
            },

            updateMarkerPosition(latlng) {
                if (!this.isInitialized) return;

                this.marker.setLatLng(latlng);
                this.updateCoordinatesDisplay(latlng.lat, latlng.lng);

                document.getElementById('Latitud').value = latlng.lat.toFixed(6);
                document.getElementById('Longitud').value = latlng.lng.toFixed(6);

                this.showToast(`Ubicación actualizada: ${latlng.lat.toFixed(6)}, ${latlng.lng.toFixed(6)}`, 'info');
                this.map.panTo(latlng);
            },

            updateCoordinatesDisplay(lat, lng) {
                const latDisplay = document.getElementById('latDisplay');
                const lngDisplay = document.getElementById('lngDisplay');

                if (latDisplay) latDisplay.value = lat.toFixed(6);
                if (lngDisplay) lngDisplay.value = lng.toFixed(6);
            },

            centerToTrinidad() {
                if (this.isInitialized) {
                    this.map.setView([config.defaultLocation.lat, config.defaultLocation.lng], 13);
                    this.updateMarkerPosition({ lat: config.defaultLocation.lat, lng: config.defaultLocation.lng });
                } else {
                    this.updateCoordinatesDisplay(config.defaultLocation.lat, config.defaultLocation.lng);
                    document.getElementById('Latitud').value = config.defaultLocation.lat.toFixed(6);
                    document.getElementById('Longitud').value = config.defaultLocation.lng.toFixed(6);
                }

                this.hasLocationChanged = true;
                this.updateLocationBadge();
                this.showToast('Centrado en Trinidad, Beni', 'info');
            },

            restoreOriginalLocation() {
                if (this.isInitialized) {
                    this.map.setView([config.originalLocation.lat, config.originalLocation.lng], 13);
                    this.updateMarkerPosition({
                        lat: config.originalLocation.lat,
                        lng: config.originalLocation.lng
                    });
                } else {
                    this.updateCoordinatesDisplay(config.originalLocation.lat, config.originalLocation.lng);
                    document.getElementById('Latitud').value = config.originalLocation.lat.toFixed(6);
                    document.getElementById('Longitud').value = config.originalLocation.lng.toFixed(6);
                }

                this.hasLocationChanged = false;
                this.updateLocationBadge();
                this.showToast('Ubicación restaurada a la original', 'success');
            },

            updateLocationBadge() {
                const originalBadge = document.getElementById('originalLocationBadge');
                if (originalBadge) {
                    if (this.hasLocationChanged) {
                        originalBadge.style.display = 'inline-block';
                    } else {
                        originalBadge.style.display = 'none';
                    }
                }
            },

            showToast(message, type = 'info') {
                const toastEl = document.getElementById('liveToast');
                const toastMsg = document.getElementById('toastMessage');

                if (toastEl && toastMsg) {
                    const iconMap = {
                        'success': 'check-circle',
                        'info': 'info-circle',
                        'warning': 'exclamation-circle',
                        'error': 'exclamation-triangle'
                    };

                    const icon = toastEl.querySelector('i');
                    if (icon) {
                        icon.className = `fas fa-${iconMap[type] || 'info-circle'} me-2 text-${type}`;
                    }

                    toastMsg.textContent = message;

                    if (window.appToast) {
                        window.appToast.show();
                    } else if (!config.isTestMode) {
                        console.log(`${type.toUpperCase()}: ${message}`);
                    }
                }
            }
        };

        // Módulo para manejo del formulario en edición
        const formManager = {
            hasChanges: false,
            originalValues: {},

            init() {
                // Guardar valores originales
                this.saveOriginalValues();

                // Inicializar componentes
                this.initBasicComponents();
                this.setupCharacterCounters();
                this.setupChangeDetection();

                // Configurar mapa
                mapManager.init();

                // Configurar botones del mapa
                const centerBtn = document.getElementById('centerToTrinidadBtn');
                const restoreBtn = document.getElementById('restoreOriginalLocationBtn');

                if (centerBtn) {
                    centerBtn.addEventListener('click', () => mapManager.centerToTrinidad());
                }

                if (restoreBtn) {
                    restoreBtn.addEventListener('click', () => mapManager.restoreOriginalLocation());
                }

                // Configurar modal de restauración
                this.setupRestoreModal();

                // Configurar validación según modo
                if (config.isTestMode) {
                    this.setupTestFriendlyForm();
                } else {
                    this.setupUserFriendlyForm();
                }
            },

            saveOriginalValues() {
                // Guardar valores originales de todos los campos
                const form = document.getElementById('siteForm');
                if (form) {
                    const inputs = form.querySelectorAll('input, textarea, select');
                    this.originalValues = {};

                    inputs.forEach(input => {
                        const name = input.name;
                        if (name) {
                            this.originalValues[name] = input.value;
                        }
                    });

                    // Guardar también coordenadas
                    this.originalValues['Latitud'] = config.originalLocation.lat;
                    this.originalValues['Longitud'] = config.originalLocation.lng;
                }
            },

            initBasicComponents() {
                // Tooltips
                if (!config.isTestMode) {
                    try {
                        var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                        [...tooltips].forEach(el => new bootstrap.Tooltip(el));
                    } catch (e) {
                        console.log('Tooltips no disponibles:', e.message);
                    }
                }

                // Toast
                try {
                    var toastEl = document.getElementById('liveToast');
                    if (toastEl) window.appToast = new bootstrap.Toast(toastEl);
                } catch (e) {}

                // Tabs
                try {
                    const tabTriggers = document.querySelectorAll('#langTabs button[data-bs-toggle="tab"]');
                    tabTriggers.forEach(trigger => {
                        trigger.addEventListener('shown.bs.tab', () => {
                            setTimeout(() => {
                                if (mapManager.map && mapManager.isInitialized) {
                                    mapManager.map.invalidateSize();
                                }
                            }, 300);
                        });
                    });
                } catch (e) {}
            },

            setupCharacterCounters() {
                const fields = [
                    { name: 'Nombre', counterId: 'nombreCounter', max: 100 },
                    { name: 'Direccion', counterId: 'direccionCounter', max: 200 },
                    { name: 'NombreIngles', counterId: 'nombreInglesCounter', max: 100 },
                    { name: 'NombrePortugues', counterId: 'nombrePortuguesCounter', max: 100 },
                    { name: 'Descripcion', counterId: 'descripcionCounter', max: 1000 },
                    { name: 'DescripcionIngles', counterId: 'descripcionInglesCounter', max: 1000 },
                    { name: 'DescripcionPortugues', counterId: 'descripcionPortuguesCounter', max: 1000 }
                ];

                fields.forEach(field => {
                    const input = document.querySelector(`[name="${field.name}"]`);
                    const counter = document.getElementById(field.counterId);

                    if (input && counter) {
                        const update = () => {
                            const length = input.value.length;
                            counter.textContent = `${length}/${field.max}`;

                            if (!config.isTestMode) {
                                counter.className = 'text-muted';
                                if (length > field.max * 0.9) counter.classList.add('text-warning');
                                if (length > field.max) counter.classList.add('text-danger');
                            }
                        };

                        input.addEventListener('input', update);
                        update(); // Estado inicial
                    }
                });
            },

            setupChangeDetection() {
                const form = document.getElementById('siteForm');
                if (!form) return;

                const inputs = form.querySelectorAll('input, textarea, select');

                inputs.forEach(input => {
                    input.addEventListener('input', () => this.checkForChanges());
                    input.addEventListener('change', () => this.checkForChanges());
                });

                // También monitorear cambios en coordenadas
                const latInput = document.getElementById('Latitud');
                const lngInput = document.getElementById('Longitud');

                if (latInput && lngInput) {
                    latInput.addEventListener('change', () => this.checkForChanges());
                    lngInput.addEventListener('change', () => this.checkForChanges());
                }
            },

            checkForChanges() {
                let hasChanges = false;
                const form = document.getElementById('siteForm');

                if (!form) return false;

                // Verificar campos del formulario
                const inputs = form.querySelectorAll('input, textarea, select');
                for (let input of inputs) {
                    const name = input.name;
                    if (name && this.originalValues[name] !== input.value) {
                        hasChanges = true;
                        break;
                    }
                }

                // Verificar coordenadas
                const currentLat = document.getElementById('Latitud').value;
                const currentLng = document.getElementById('Longitud').value;

                if (parseFloat(currentLat) !== config.originalLocation.lat ||
                    parseFloat(currentLng) !== config.originalLocation.lng) {
                    hasChanges = true;
                }

                this.hasChanges = hasChanges;
                return hasChanges;
            },

            setupUserFriendlyForm() {
                const form = document.getElementById('siteForm');
                const submitBtn = document.getElementById('submitBtn');

                if (!form || !submitBtn) return;

                // Configurar validación en tiempo real
                this.setupRealTimeValidation(form);

                // Configurar envío del formulario
                form.addEventListener('submit', (e) => {
                    if (!this.validateFormBeforeSubmit()) {
                        e.preventDefault();
                        return false;
                    }

                    // Mostrar estado de carga
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = `
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        Actualizando...
                    `;

                    return true;
                });
            },

            setupTestFriendlyForm() {
                const form = document.getElementById('siteForm');
                const submitBtn = document.getElementById('submitBtn');

                if (!form || !submitBtn) return;

                console.log('Configurando formulario para pruebas...');

                // Desactivar validaciones automáticas
                form.noValidate = true;
                form.classList.remove('needs-validation');

                // Simplificar envío del formulario
                form.addEventListener('submit', (e) => {
                    // Validación mínima
                    let isValid = true;
                    const requiredFields = ['Nombre', 'Descripcion', 'TipoId'];

                    requiredFields.forEach(fieldName => {
                        const field = form.querySelector(`[name="${fieldName}"]`);
                        if (field && !field.value.trim()) {
                            isValid = false;
                            field.classList.add('is-invalid');
                        }
                    });

                    if (!isValid) {
                        e.preventDefault();
                        return false;
                    }

                    // Estado de carga simplificado
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = 'Enviando...';

                    return true;
                });
            },

            setupRealTimeValidation(form) {
                form.querySelectorAll('input, textarea, select').forEach(field => {
                    field.addEventListener('blur', function() {
                        this.validateSingleField(this);
                    }.bind(this));
                });
            },

            validateSingleField(field) {
                if (field.hasAttribute('required') && !field.value.trim()) {
                    field.classList.add('is-invalid');
                    field.classList.remove('is-valid');
                    return false;
                }

                if (field.hasAttribute('maxlength')) {
                    const max = parseInt(field.getAttribute('maxlength'));
                    if (field.value.length > max) {
                        field.classList.add('is-invalid');
                        field.classList.remove('is-valid');
                        return false;
                    }
                }

                if (field.value.trim()) {
                    field.classList.add('is-valid');
                    field.classList.remove('is-invalid');
                } else {
                    field.classList.remove('is-valid', 'is-invalid');
                }

                return true;
            },

            validateFormBeforeSubmit() {
                let isValid = true;
                const form = document.getElementById('siteForm');

                // Validar campos requeridos
                const requiredFields = [
                    { name: 'Nombre', message: 'El nombre del sitio es requerido' },
                    { name: 'Descripcion', message: 'La descripción es requerida' },
                    { name: 'TipoId', message: 'Debe seleccionar un tipo de sitio' }
                ];

                requiredFields.forEach(field => {
                    const input = form.querySelector(`[name="${field.name}"]`);
                    if (input && !input.value.trim()) {
                        isValid = false;
                        input.classList.add('is-invalid');
                        mapManager.showToast(field.message, 'danger');
                        if (field.name === 'Nombre') input.focus();
                    }
                });

                // Validar coordenadas
                const lat = document.getElementById('Latitud').value;
                const lng = document.getElementById('Longitud').value;
                if (!lat || !lng) {
                    isValid = false;
                    mapManager.showToast('Debe seleccionar una ubicación en el mapa', 'danger');

                    const mapSection = document.querySelector('.card.shadow-lg');
                    if (mapSection) {
                        mapSection.style.borderColor = '#dc3545';
                        mapSection.style.boxShadow = '0 0 0 0.25rem rgba(220,53,69,.25)';
                        setTimeout(() => {
                            mapSection.style.borderColor = '';
                            mapSection.style.boxShadow = '';
                        }, 3000);
                    }
                }

                return isValid;
            },

            setupRestoreModal() {
                const confirmBtn = document.getElementById('confirmRestore');
                const modal = document.getElementById('restoreModal');

                if (confirmBtn && modal) {
                    confirmBtn.addEventListener('click', () => {
                        const bsModal = bootstrap.Modal.getInstance(modal);
                        this.restoreForm();
                        bsModal.hide();
                        mapManager.showToast('Valores originales restaurados', 'success');
                    });
                }
            },

            restoreForm() {
                if (!this.checkForChanges()) {
                    mapManager.showToast('No hay cambios para restaurar', 'info');
                    return;
                }

                // Restaurar valores del formulario
                for (const [name, value] of Object.entries(this.originalValues)) {
                    const element = document.querySelector(`[name="${name}"]`);
                    if (element) {
                        element.value = value;
                    }
                }

                // Restaurar coordenadas
                document.getElementById('Latitud').value = config.originalLocation.lat;
                document.getElementById('Longitud').value = config.originalLocation.lng;
                document.getElementById('latDisplay').value = config.originalLocation.lat.toFixed(6);
                document.getElementById('lngDisplay').value = config.originalLocation.lng.toFixed(6);

                // Restaurar ubicación en el mapa
                mapManager.restoreOriginalLocation();

                // Restaurar validaciones
                const form = document.getElementById('siteForm');
                if (form) {
                    form.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                        el.classList.remove('is-valid', 'is-invalid');
                    });
                }

                // Restaurar estado del botón
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Actualizar Sitio';
                }

                // Actualizar contadores
                this.setupCharacterCounters();

                this.hasChanges = false;
            }
        };

        // Inicialización principal
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inicializando formulario de edición de sitio turístico...');

            // Configurar modo test si es necesario
            if (config.isTestMode) {
                document.body.classList.add('test-mode');
                console.log('✅ Modo de pruebas activado');
            }

            // Inicializar gestor del formulario
            formManager.init();
        });
    </script>
}