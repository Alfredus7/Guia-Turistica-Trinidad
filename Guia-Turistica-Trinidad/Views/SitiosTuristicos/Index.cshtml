@model IEnumerable<guia_turistico.Models.SitiosTuristicos>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Listado de Sitios Turísticos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.NombreIngles)</th>
                <th>@Html.DisplayNameFor(model => model.NombrePortugues)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.DescripcionIngles)</th>
                <th>@Html.DisplayNameFor(model => model.DescripcionPortugues)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Latitud)</th>
                <th>@Html.DisplayNameFor(model => model.Longitud)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreIngles)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombrePortugues)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionIngles)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionPortugues)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Latitud)</td>
                    <td>@Html.DisplayFor(modelItem => item.Longitud)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2 text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
