@model guia_turistico.Models.ImagenesSitios

@{
    ViewData["Title"] = "Editar Imagen";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-edit me-2"></i>Editar Imagen
                    </h1>
                    <p class="lead mb-0 opacity-75">Modifica la información de esta imagen del sitio turístico</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Edit" id="imageForm" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Sección de Imagen -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary bg-gradient py-3 text-white">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-camera me-2"></i>Gestión de Imagen
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <!-- Información del cambio -->
                                <div class="alert alert-info mb-3">
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    <small>
                                        <i class="fas fa-info-circle me-2"></i>
                                        <strong>Instrucciones:</strong> Modifica la URL de la imagen o cambia el sitio turístico si fue asignada incorrectamente.
                                    </small>
                                </div>

                                <!-- Selector de Sitio -->
                                <div class="form-group mb-4">
                                    <label asp-for="SitioTuristicoId" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>Sitio Turístico *
                                    </label>
                                    <select asp-for="SitioTuristicoId"
                                            class="form-select"
                                            asp-items="ViewBag.SitioTuristicoId"
                                            required
                                            id="sitioSelect"
                                            data-bs-toggle="tooltip"
                                            data-bs-title="Selecciona el sitio al que pertenece la imagen">
                                        <option value="" disabled>Selecciona un sitio turístico</option>
                                    </select>
                                    <span asp-validation-for="SitioTuristicoId" class="invalid-feedback"></span>
                                </div>

                                <!-- Campo para editar URL -->
                                <div class="form-group">
                                    <label asp-for="Url" class="form-label fw-semibold">
                                        URL de Imagen *
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-link"></i>
                                        </span>
                                        <input asp-for="Url"
                                               type="url"
                                               class="form-control"
                                               placeholder="https://ejemplo.com/imagen-sitio.jpg"
                                               id="imageUrlInput"
                                               required
                                               data-bs-toggle="tooltip"
                                               data-bs-title="URL de imagen válida (jpg, png, gif, webp, etc.)">
                                    </div>
                                    <div class="form-text">
                                        <small>Formatos aceptados: .jpg, .png, .gif, .webp, .svg, .bmp, .avif</small>
                                    </div>
                                    <span asp-validation-for="Url" class="invalid-feedback"></span>
                                </div>

                                <!-- Feedback de validación Bootstrap -->
                                <div class="valid-feedback" id="urlValidFeedback">
                                    <i class="fas fa-check-circle me-1"></i>URL de imagen válida
                                </div>
                                <div class="invalid-feedback" id="urlInvalidFeedback">
                                    <i class="fas fa-exclamation-circle me-1"></i>No se pudo cargar la imagen
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa -->
                        <div class="col-lg-4 border-start bg-light">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>

                                <div class="border rounded-3 p-3 bg-white">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-image me-2 text-success"></i>Imagen del Sitio
                                    </h6>

                                    <div class="ratio ratio-1x1 mb-3">
                                        <img src="@(!string.IsNullOrEmpty(Model.Url) ? Model.Url : "data:image/svg+xml;base64,")"
                                             class="img-fluid rounded shadow-sm object-fit-cover"
                                             id="imagePreview"
                                             alt="Vista previa de la imagen"
                                             loading="lazy">
                                    </div>

                                    <!-- Indicador de estado -->
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success px-3 py-2 me-2" id="imageStatus">
                                            <i class="fas fa-check-circle me-1"></i>Imagen cargada
                                        </span>
                                        <span class="badge bg-info px-3 py-2 me-2" id="originalImageBadge" style="display: none;">
                                            <i class="fas fa-history me-1"></i>Imagen modificada
                                        </span>
                                        <span class="badge bg-warning px-3 py-2" id="originalSiteBadge" style="display: none;">
                                            <i class="fas fa-exchange-alt me-1"></i>Sitio modificado
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones con Modal de Confirmación -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar los cambios?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de actualizar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-outline-danger btn-lg px-5"
                                    data-bs-toggle="modal" data-bs-target="#restoreModal">
                                <i class="fas fa-undo me-2"></i>Restaurar Original
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Actualizar Imagen
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación para Restaurar -->
<div class="modal fade" id="restoreModal" tabindex="-1" aria-labelledby="restoreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restoreModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Restauración
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas restaurar todos los valores originales?</p>
                <p class="text-muted small">Se perderán todos los cambios no guardados.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmRestore">
                    <i class="fas fa-undo me-2"></i>Restaurar Todo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para Mensajes -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Sistema</strong>
            <small>Ahora</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de ejemplo
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Configuración global para Edit de Imagen
        const config = {
            isTestMode: window.navigator.webdriver === true ||
                       window.location.search.includes('testmode'),
            defaultImage: 'data:image/svg+xml;base64,',
            errorImage: 'data:image/svg+xml;base64,',
            originalData: {
                Url: "@Html.Raw(Model.Url?.Replace("\"", "\\\""))",
                SitioTuristicoId: "@Model.SitioTuristicoId"
            }
        };

        // Módulo para manejo del formulario en edición
        const formManager = {
            hasChanges: false,
            imageChanged: false,
            siteChanged: false,

            init() {
                // Configurar modo test si es necesario
                if (config.isTestMode) {
                    document.body.classList.add('test-mode');
                    console.log('✅ Modo de pruebas activado - Edición de Imagen');
                }

                // Inicializar componentes básicos
                this.initBasicComponents();
                this.setupImagePreview();
                this.setupChangeDetection();

                // Configurar validación según modo
                if (config.isTestMode) {
                    this.setupTestFriendlyForm();
                } else {
                    this.setupUserFriendlyForm();
                }

                // Configurar modal de restauración
                this.setupRestoreModal();

                // Actualizar badges iniciales
                this.updateBadges();
            },

            initBasicComponents() {
                // Tooltips
                if (!config.isTestMode) {
                    try {
                        var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                        [...tooltips].forEach(el => new bootstrap.Tooltip(el));
                    } catch (e) {
                        console.log('Tooltips no disponibles:', e.message);
                    }
                }

                // Toast
                try {
                    var toastEl = document.getElementById('liveToast');
                    if (toastEl) window.appToast = new bootstrap.Toast(toastEl);
                } catch (e) {}

                // Alert dismissible
                try {
                    var alertEl = document.querySelector('.alert.alert-info');
                    if (alertEl) {
                        var closeBtn = alertEl.querySelector('.btn-close');
                        if (closeBtn) {
                            closeBtn.addEventListener('click', () => {
                                alertEl.style.display = 'none';
                            });
                        }
                    }
                } catch (e) {}
            },

            setupImagePreview() {
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');

                if (!imageUrlInput || !imagePreview) return;

                // Configurar validación de URL con debouncing
                let validationTimeout;
                imageUrlInput.addEventListener('input', () => {
                    clearTimeout(validationTimeout);

                    const url = imageUrlInput.value.trim();
                    const originalUrl = config.originalData.Url || '';

                    // Actualizar badges si la URL cambió
                    if (url !== originalUrl) {
                        this.imageChanged = true;
                    } else {
                        this.imageChanged = false;
                    }
                    this.updateBadges();

                    if (!url) {
                        this.resetPreview();
                        return;
                    }

                    validationTimeout = setTimeout(() => {
                        this.validateImageUrl(url, imagePreview, imageUrlInput);
                    }, 800);
                });

                // Inicializar con la imagen del modelo
                if (config.originalData.Url) {
                    imagePreview.src = config.originalData.Url;
                    imageUrlInput.classList.add('is-valid');
                }
            },

            setupChangeDetection() {
                const imageUrlInput = document.getElementById('imageUrlInput');
                const sitioSelect = document.getElementById('sitioSelect');

                if (imageUrlInput) {
                    imageUrlInput.addEventListener('input', () => this.checkForChanges());
                }

                if (sitioSelect) {
                    sitioSelect.addEventListener('change', () => {
                        const originalSiteId = config.originalData.SitioTuristicoId || '';
                        const currentSiteId = sitioSelect.value;

                        if (currentSiteId !== originalSiteId) {
                            this.siteChanged = true;
                        } else {
                            this.siteChanged = false;
                        }

                        this.updateBadges();
                        this.checkForChanges();
                    });
                }
            },

            checkForChanges() {
                const form = document.getElementById('imageForm');
                if (!form) return false;

                let hasChanges = false;

                // Verificar URL
                const imageUrlInput = document.getElementById('imageUrlInput');
                if (imageUrlInput && imageUrlInput.value !== config.originalData.Url) {
                    hasChanges = true;
                }

                // Verificar sitio
                const sitioSelect = document.getElementById('sitioSelect');
                if (sitioSelect && sitioSelect.value !== config.originalData.SitioTuristicoId) {
                    hasChanges = true;
                }

                this.hasChanges = hasChanges || this.imageChanged || this.siteChanged;
                return this.hasChanges;
            },

            updateBadges() {
                const originalImageBadge = document.getElementById('originalImageBadge');
                const originalSiteBadge = document.getElementById('originalSiteBadge');

                if (originalImageBadge) {
                    originalImageBadge.style.display = this.imageChanged ? 'inline-block' : 'none';
                }

                if (originalSiteBadge) {
                    originalSiteBadge.style.display = this.siteChanged ? 'inline-block' : 'none';
                }
            },

            setupUserFriendlyForm() {
                const form = document.getElementById('imageForm');
                const submitBtn = document.getElementById('submitBtn');

                if (!form || !submitBtn) return;

                // Configurar validación en tiempo real
                this.setupRealTimeValidation(form);

                // Configurar envío del formulario
                form.addEventListener('submit', (e) => {
                    if (!this.validateFormBeforeSubmit()) {
                        e.preventDefault();
                        return false;
                    }

                    // Mostrar estado de carga
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = `
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        Actualizando...
                    `;

                    return true;
                });
            },

            setupTestFriendlyForm() {
                const form = document.getElementById('imageForm');
                const submitBtn = document.getElementById('submitBtn');

                if (!form || !submitBtn) return;

                console.log('Configurando formulario para pruebas...');

                // Desactivar validaciones automáticas
                form.noValidate = true;
                form.classList.remove('needs-validation');

                // Simplificar envío del formulario
                form.addEventListener('submit', (e) => {
                    // Validación mínima
                    let isValid = true;

                    const imageUrlInput = document.getElementById('imageUrlInput');
                    const sitioSelect = document.getElementById('sitioSelect');

                    if (!imageUrlInput || !imageUrlInput.value.trim()) {
                        isValid = false;
                        if (imageUrlInput) imageUrlInput.classList.add('is-invalid');
                    }

                    if (!sitioSelect || !sitioSelect.value) {
                        isValid = false;
                        if (sitioSelect) sitioSelect.classList.add('is-invalid');
                    }

                    if (!isValid) {
                        e.preventDefault();
                        return false;
                    }

                    // Estado de carga simplificado
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = 'Enviando...';

                    return true;
                });
            },

            setupRealTimeValidation(form) {
                form.querySelectorAll('input, select').forEach(field => {
                    field.addEventListener('blur', function() {
                        validateSingleField(this);
                    });
                });
            },

            validateFormBeforeSubmit() {
                let isValid = true;
                const form = document.getElementById('imageForm');

                // Validar URL de imagen
                const imageUrlInput = form.querySelector('[name="Url"]');
                if (!imageUrlInput || !imageUrlInput.value.trim()) {
                    isValid = false;
                    imageUrlInput.classList.add('is-invalid');
                    this.showMessage('La URL de la imagen es requerida', 'danger');
                    imageUrlInput.focus();
                } else if (!this.isValidImageUrl(imageUrlInput.value)) {
                    isValid = false;
                    imageUrlInput.classList.add('is-invalid');
                    this.showMessage('Por favor ingresa una URL válida de imagen', 'danger');
                    imageUrlInput.focus();
                }

                // Validar sitio turístico
                const sitioSelect = form.querySelector('[name="SitioTuristicoId"]');
                if (!sitioSelect || !sitioSelect.value) {
                    isValid = false;
                    sitioSelect.classList.add('is-invalid');
                    this.showMessage('Debes seleccionar un sitio turístico', 'danger');
                    if (!imageUrlInput || !imageUrlInput.value.trim()) sitioSelect.focus();
                }

                return isValid;
            },

            isValidImageUrl(url) {
                if (!url) return false;

                const imagePatterns = [
                    /\.(jpeg|jpg|jfif|pjpeg|pjp)$/i,
                    /\.(png)$/i,
                    /\.(gif)$/i,
                    /\.(bmp)$/i,
                    /\.(webp)$/i,
                    /\.(svg)$/i,
                    /\.(avif)$/i,
                    /\.(tiff|tif)$/i
                ];

                try {
                    new URL(url);
                    return imagePatterns.some(pattern => pattern.test(url));
                } catch {
                    return false;
                }
            },

            validateImageUrl(url, previewElement, inputElement) {
                // Validación básica de URL
                try {
                    new URL(url);
                } catch {
                    this.showImageError('URL no válida', previewElement, inputElement);
                    return;
                }

                if (!this.isValidImageUrl(url)) {
                    this.showImageError('URL no es una imagen válida', previewElement, inputElement);
                    return;
                }

                // Intentar cargar la imagen
                const img = new Image();
                img.onload = () => {
                    previewElement.src = url;
                    inputElement.classList.add('is-valid');
                    inputElement.classList.remove('is-invalid');
                    this.updateImageStatus('Imagen cargada', 'success');
                };
                img.onerror = () => {
                    this.showImageError('No se pudo cargar la imagen', previewElement, inputElement);
                    this.updateImageStatus('Error al cargar la imagen', 'danger');
                };
                img.src = url;
                this.updateImageStatus('Cargando imagen...', 'info');
            },

            showImageError(message, previewElement, inputElement) {
                previewElement.src = config.errorImage;
                inputElement.classList.add('is-invalid');
                inputElement.classList.remove('is-valid');
            },

            resetPreview() {
                const preview = document.getElementById('imagePreview');
                const input = document.getElementById('imageUrlInput');

                if (preview) preview.src = config.defaultImage;
                if (input) {
                    input.classList.remove('is-valid', 'is-invalid');
                }
                this.updateImageStatus('Esperando URL de imagen', 'info');
            },

            updateImageStatus(message, type = 'info') {
                const statusBadge = document.getElementById('imageStatus');
                if (!statusBadge) return;

                const iconMap = {
                    'success': 'check-circle',
                    'danger': 'exclamation-triangle',
                    'warning': 'exclamation-circle',
                    'info': 'info-circle'
                };

                statusBadge.innerHTML = `<i class="fas fa-${iconMap[type] || 'info-circle'} me-1"></i>${message}`;
                statusBadge.className = `badge bg-${type} px-3 py-2`;
            },

            setupRestoreModal() {
                const confirmBtn = document.getElementById('confirmRestore');
                const modal = document.getElementById('restoreModal');

                if (confirmBtn && modal) {
                    confirmBtn.addEventListener('click', () => {
                        const bsModal = bootstrap.Modal.getInstance(modal);
                        this.restoreForm();
                        bsModal.hide();
                        this.showMessage('Valores originales restaurados', 'success');
                    });
                }
            },

            restoreForm() {
                if (!this.checkForChanges()) {
                    this.showMessage('No hay cambios para restaurar', 'info');
                    return;
                }

                // Restaurar valores del formulario
                for (const [name, value] of Object.entries(config.originalData)) {
                    const element = document.querySelector(`[name="${name}"]`);
                    if (element) {
                        element.value = value;
                    }
                }

                // Restaurar imagen
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');

                if (imageUrlInput) imageUrlInput.value = config.originalData.Url || '';
                if (imagePreview) {
                    if (config.originalData.Url) {
                        imagePreview.src = config.originalData.Url;
                        imageUrlInput.classList.add('is-valid');
                        imageUrlInput.classList.remove('is-invalid');
                    } else {
                        imagePreview.src = config.defaultImage;
                        imageUrlInput.classList.remove('is-valid', 'is-invalid');
                    }
                }

                // Ocultar badges
                this.imageChanged = false;
                this.siteChanged = false;
                this.updateBadges();

                // Restaurar validaciones
                const form = document.getElementById('imageForm');
                if (form) {
                    form.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                        el.classList.remove('is-valid', 'is-invalid');
                    });
                }

                // Restaurar estado del botón
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Actualizar Imagen';
                }

                this.hasChanges = false;
            },

            showMessage(message, type = 'info') {
                const toastEl = document.getElementById('liveToast');
                const toastMsg = document.getElementById('toastMessage');

                if (toastEl && toastMsg && window.appToast) {
                    const iconMap = {
                        'success': 'check-circle',
                        'danger': 'exclamation-triangle',
                        'warning': 'exclamation-circle',
                        'info': 'info-circle'
                    };

                    const icon = toastEl.querySelector('i');
                    if (icon) {
                        icon.className = `fas fa-${iconMap[type] || 'info-circle'} me-2 text-${type}`;
                    }

                    toastMsg.textContent = message;
                    window.appToast.show();
                } else {
                    console.log(`${type.toUpperCase()}: ${message}`);
                }
            }
        };

        // Función de ayuda para validación individual
        function validateSingleField(field) {
            if (field.hasAttribute('required') && !field.value.trim()) {
                field.classList.add('is-invalid');
                field.classList.remove('is-valid');
                return false;
            }

            if (field.value.trim()) {
                field.classList.add('is-valid');
                field.classList.remove('is-invalid');
            } else {
                field.classList.remove('is-valid', 'is-invalid');
            }

            return true;
        }

        // Inicialización principal
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inicializando formulario de edición de imagen...');

            // Inicializar gestor del formulario
            formManager.init();
        });
    </script>

    <style>
        /* Estilos consistentes */
        .object-fit-cover {
            object-fit: cover;
        }

        .is-valid {
            border-color: #198754 !important;
        }

        .is-invalid {
            border-color: #dc3545 !important;
        }

        /* Estilos para modo test */
        .test-mode {
            background-color: #f8f9fa;
        }

            .test-mode input,
            .test-mode textarea,
            .test-mode select {
                background-color: white !important;
                border: 1px solid #dee2e6 !important;
            }

        /* Animaciones suaves */
        .is-valid, .is-invalid {
            transition: border-color 0.3s ease;
        }
    </style>
}