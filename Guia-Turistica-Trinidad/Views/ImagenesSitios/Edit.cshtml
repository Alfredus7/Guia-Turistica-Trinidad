@model guia_turistico.Models.ImagenesSitios

@{
    ViewData["Title"] = "Editar Imagen";
}

<div class="container py-4">
    <!-- Header con navegación - COHERENTE -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-edit me-2"></i>Editar Imagen
                    </h1>
                    <p class="lead mb-0 opacity-75">Modifica la información de esta imagen del sitio turístico</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal - ESTRUCTURA COHERENTE -->
    <div class="container py-4">
        <form asp-action="Edit" id="imageForm" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Sección de Imagen - ESTRUCTURA IDÉNTICA A LA DE TIPOS -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header card-header-gradient py-3">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-camera me-2"></i>Gestión de Imagen
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen - ESTRUCTURA IDÉNTICA -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <div class="mb-4">
                                    <div class="alert alert-info mb-3">
                                        <small>
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Instrucciones:</strong> Modifica la URL de la imagen o cambia el sitio turístico si fue asignada incorrectamente.
                                        </small>
                                    </div>

                                    <!-- Selector de Sitio - EDITABLE -->
                                    <div class="form-group mb-4">
                                        <label asp-for="SitioTuristicoId" class="form-label fw-semibold">
                                            <i class="fas fa-map-marker-alt me-2 text-muted"></i>Sitio Turístico
                                        </label>
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text input-group-custom">
                                                <i class="fas fa-map-pin text-primary"></i>
                                            </span>
                                            <select asp-for="SitioTuristicoId"
                                                    class="form-select form-select-lg"
                                                    asp-items="ViewBag.SitioTuristicoId"
                                                    required
                                                    id="sitioSelect">
                                                <option value="" selected disabled>Selecciona un sitio turístico</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="SitioTuristicoId" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">Sitio al que está asociada la imagen (puedes corregir si fue asignada incorrectamente)</div>
                                    </div>

                                    <!-- Campo para editar URL -->
                                    <div class="form-group">
                                        <label asp-for="Url" class="form-label fw-semibold">
                                            URL de Imagen
                                        </label>
                                        <input asp-for="Url"
                                               type="url"
                                               class="form-control"
                                               placeholder="https://ejemplo.com/imagen.jpg"
                                               id="imageUrlInput">
                                        <span asp-validation-for="Url" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            Formato: .jpg, .png, .gif, .webp, .svg, .bmp, .avif
                                        </div>
                                    </div>

                                    <!-- Feedback en tiempo real - EXACTAMENTE IGUAL QUE EN TIPOS -->
                                    <div class="alert alert-light border mt-3 d-none" id="urlFeedback">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-spinner fa-spin me-2 text-info" id="loadingIcon"></i>
                                            <span id="urlFeedbackText"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa - EXACTAMENTE IGUAL QUE EN TIPOS -->
                        <div class="col-lg-4 border-start bg-panel">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>

                                <div class="border rounded-3 p-3 bg-light-subtle">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-image me-2 text-success"></i>Imagen del Sitio
                                    </h6>

                                    <div class="ratio ratio-1x1 mb-3">
                                        <img src="@(!string.IsNullOrEmpty(Model.Url) ? Model.Url : "https://via.placeholder.com/400/6c757d/ffffff?text=Preview")"
                                             class="img-fluid rounded shadow-sm object-fit-cover"
                                             id="imagePreview"
                                             alt="Vista previa de la imagen"
                                             onerror="this.src='https://via.placeholder.com/400/6c757d/ffffff?text=Error+de+imagen'">
                                    </div>

                                    <div class="mt-3">
                                        <span class="badge badge-success px-3 py-2" id="imageStatus">
                                            <i class="fas fa-check-circle me-1"></i>Imagen cargada
                                        </span>
                                        <span class="badge badge-info px-3 py-2 ms-2" id="originalImageBadge" style="display: none;">
                                            <i class="fas fa-history me-1"></i>Imagen original
                                        </span>
                                        <span class="badge badge-warning px-3 py-2 ms-2" id="originalSiteBadge" style="display: none;">
                                            <i class="fas fa-exchange-alt me-1"></i>Sitio original
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones - COHERENTE -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar los cambios?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de actualizar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-warning btn-lg px-5" onclick="formManager.restoreOriginal()">
                                <i class="fas fa-undo me-2"></i>Restaurar Original
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Actualizar Imagen
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/imageUrlValidator.js" asp-append-version="true"></script>
    <script>
        // Módulo para manejo del formulario de imagen - COHERENTE
        const formManager = {
            originalData: {},
            formModified: false,
            imageChanged: false,
            siteChanged: false,

            init() {
                // Guardar datos originales
                this.saveOriginalData();
                this.initImagePreview();
                this.initFormValidation();
                this.initTooltips();
                this.initChangeDetection();
                this.cleanLocalStorage();
            },

            saveOriginalData() {
                // Guardar todos los valores originales del formulario
                const form = document.getElementById('imageForm');
                const formData = new FormData(form);
                this.originalData = {};

                for (let [key, value] of formData.entries()) {
                    this.originalData[key] = value;
                }

                // Guardar también la URL de imagen original
                this.originalData['Url'] = '@Model.Url';
                // Guardar el sitio original
                this.originalData['SitioTuristicoId'] = '@Model.SitioTuristicoId';
            },

            initImagePreview() {
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');
                const urlFeedback = document.getElementById('urlFeedback');
                const loadingIcon = document.getElementById('loadingIcon');
                const imageStatus = document.getElementById('imageStatus');

                // Configurar validación en tiempo real usando el validador externo
                if (typeof imageUrlValidator !== 'undefined') {
                    imageUrlValidator.setupRealTimeValidation(
                        imageUrlInput,
                        imagePreview,
                        urlFeedback,
                        loadingIcon,
                        imageStatus
                    );
                } else {
                    // Fallback si no existe el validador externo
                    this.initImageValidationFallback(imageUrlInput, imagePreview, imageStatus);
                }

                // Detectar cambios en la URL de la imagen
                imageUrlInput.addEventListener('input', () => {
                    this.checkForChanges();
                    this.updateBadges();
                });
            },

            initImageValidationFallback(imageUrlInput, imagePreview, imageStatus) {
                let debounceTimer;

                imageUrlInput.addEventListener('input', function() {
                    clearTimeout(debounceTimer);
                    const url = this.value.trim();

                    if (!url) {
                        imagePreview.src = 'https://via.placeholder.com/400/6c757d/ffffff?text=Preview';
                        this.classList.remove('is-valid', 'is-invalid');
                        imageStatus.innerHTML = '<i class="fas fa-image me-1"></i>Esperando URL';
                        imageStatus.className = 'badge badge-success px-3 py-2';
                        return;
                    }

                    debounceTimer = setTimeout(() => {
                        if (this.isValidImageUrl(url)) {
                            this.classList.remove('is-invalid');
                            this.classList.add('is-valid');
                            imagePreview.src = url;
                            imageStatus.innerHTML = '<i class="fas fa-check-circle me-1"></i>Imagen válida';
                            imageStatus.className = 'badge badge-success px-3 py-2';
                        } else {
                            this.classList.remove('is-valid');
                            this.classList.add('is-invalid');
                            imagePreview.src = 'https://via.placeholder.com/400/dc3545/ffffff?text=URL+inválida';
                            imageStatus.innerHTML = '<i class="fas fa-times-circle me-1"></i>URL inválida';
                            imageStatus.className = 'badge badge-danger px-3 py-2';
                        }
                    }, 800);
                });

                // Añadir método al input
                imageUrlInput.isValidImageUrl = function(url) {
                    if (!url) return false;

                    const imagePatterns = [
                        /\.(jpeg|jpg|jfif|pjpeg|pjp)$/i,
                        /\.(png)$/i,
                        /\.(gif)$/i,
                        /\.(bmp)$/i,
                        /\.(webp)$/i,
                        /\.(svg)$/i,
                        /\.(avif)$/i
                    ];

                    try {
                        const urlObj = new URL(url);
                        return imagePatterns.some(pattern => pattern.test(urlObj.pathname));
                    } catch {
                        return false;
                    }
                };
            },

            updateBadges() {
                const originalImageBadge = document.getElementById('originalImageBadge');
                const originalSiteBadge = document.getElementById('originalSiteBadge');
                const currentImageUrl = document.getElementById('imageUrlInput').value;
                const currentSiteId = document.getElementById('sitioSelect').value;
                const originalImageUrl = this.originalData['UrlImagen'] || '';
                const originalSiteId = this.originalData['SitioTuristicoId'] || '';

                // Actualizar badge de imagen
                if (currentImageUrl !== originalImageUrl) {
                    originalImageBadge.style.display = 'inline-block';
                    this.imageChanged = true;
                } else {
                    originalImageBadge.style.display = 'none';
                    this.imageChanged = false;
                }

                // Actualizar badge de sitio
                if (currentSiteId !== originalSiteId) {
                    originalSiteBadge.style.display = 'inline-block';
                    this.siteChanged = true;
                } else {
                    originalSiteBadge.style.display = 'none';
                    this.siteChanged = false;
                }
            },

            initChangeDetection() {
                // Detectar cambios en todos los campos editables
                const imageUrlInput = document.getElementById('imageUrlInput');
                const sitioSelect = document.getElementById('sitioSelect');

                imageUrlInput.addEventListener('input', () => {
                    this.checkForChanges();
                    this.updateBadges();
                });

                sitioSelect.addEventListener('change', () => {
                    this.checkForChanges();
                    this.updateBadges();
                });
            },

            checkForChanges() {
                let hasChanges = false;

                // Verificar URL de imagen
                const currentImageUrl = document.getElementById('imageUrlInput').value;
                if (currentImageUrl !== this.originalData['UrlImagen']) {
                    hasChanges = true;
                }

                // Verificar sitio turístico
                const currentSiteId = document.getElementById('sitioSelect').value;
                if (currentSiteId !== this.originalData['SitioTuristicoId']) {
                    hasChanges = true;
                }

                this.formModified = hasChanges;
                return hasChanges;
            },

            initFormValidation() {
                const form = document.getElementById('imageForm');
                const submitBtn = document.getElementById('submitBtn');

                form.addEventListener('submit', (e) => {
                    // Validar URL de imagen
                    const imageUrlInput = document.getElementById('imageUrlInput');
                    const url = imageUrlInput.value.trim();

                    if (!url) {
                        e.preventDefault();
                        this.showValidationError('La URL de la imagen es requerida', imageUrlInput);
                        return false;
                    }

                    // Validar formato de imagen
                    const isValid = imageUrlInput.isValidImageUrl ?
                        imageUrlInput.isValidImageUrl(url) :
                        this.isValidImageUrl(url);

                    if (!isValid) {
                        e.preventDefault();
                        this.showValidationError('Por favor ingresa una URL válida de imagen (jpg, png, gif, etc.)', imageUrlInput);
                        return false;
                    }

                    // Validar sitio turístico seleccionado
                    const sitioSelect = document.getElementById('sitioSelect');
                    if (!sitioSelect.value || sitioSelect.value === '') {
                        e.preventDefault();
                        this.showValidationError('Debes seleccionar un sitio turístico', sitioSelect);
                        return false;
                    }

                    // Mostrar estado de carga
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Actualizando...';
                    submitBtn.disabled = true;
                    submitBtn.classList.add('btn-loading');
                    return true;
                });
            },

            isValidImageUrl(url) {
                if (!url) return false;

                const imagePatterns = [
                    /\.(jpeg|jpg|jfif|pjpeg|pjp)$/i,
                    /\.(png)$/i,
                    /\.(gif)$/i,
                    /\.(bmp)$/i,
                    /\.(webp)$/i,
                    /\.(svg)$/i,
                    /\.(avif)$/i
                ];

                try {
                    const urlObj = new URL(url);
                    return imagePatterns.some(pattern => pattern.test(urlObj.pathname));
                } catch {
                    return false;
                }
            },

            showValidationError(message, element) {
                element.classList.add('is-invalid');
                this.showGlobalToast(message, 'danger');
                element.scrollIntoView({ behavior: 'smooth', block: 'center' });
                element.focus();
            },

            initTooltips() {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            },

            cleanLocalStorage() {
                localStorage.removeItem('imagenSitioEditDraft');
                const keys = Object.keys(localStorage);
                keys.forEach(key => {
                    if (key.includes('imagen') || key.includes('borrador') || key.includes('draft')) {
                        localStorage.removeItem(key);
                    }
                });
            },

            restoreOriginal() {
                if (this.checkForChanges()) {
                    if (!confirm('¿Estás seguro de que deseas restaurar los valores originales? Se perderán todos los cambios no guardados.')) {
                        return;
                    }
                }

                // Restaurar URL de imagen
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');
                const imageStatus = document.getElementById('imageStatus');
                const originalImageUrl = this.originalData['UrlImagen'] || '';

                imageUrlInput.value = originalImageUrl;

                if (originalImageUrl) {
                    imagePreview.src = originalImageUrl;
                    imageStatus.innerHTML = '<i class="fas fa-check-circle me-1"></i>Imagen cargada';
                    imageStatus.className = 'badge badge-success px-3 py-2';
                } else {
                    imagePreview.src = 'https://via.placeholder.com/400/6c757d/ffffff?text=Preview';
                    imageStatus.innerHTML = '<i class="fas fa-image me-1"></i>Esperando URL';
                    imageStatus.className = 'badge badge-success px-3 py-2';
                }

                // Restaurar sitio turístico
                const sitioSelect = document.getElementById('sitioSelect');
                const originalSiteId = this.originalData['SitioTuristicoId'] || '';
                sitioSelect.value = originalSiteId;

                // Ocultar feedback de validación
                const urlFeedback = document.getElementById('urlFeedback');
                if (urlFeedback) {
                    urlFeedback.classList.add('d-none');
                }

                // Ocultar badges de cambios
                const originalImageBadge = document.getElementById('originalImageBadge');
                const originalSiteBadge = document.getElementById('originalSiteBadge');
                originalImageBadge.style.display = 'none';
                originalSiteBadge.style.display = 'none';

                this.imageChanged = false;
                this.siteChanged = false;

                // Limpiar validaciones
                document.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });

                const submitBtn = document.getElementById('submitBtn');
                submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Actualizar Imagen';
                submitBtn.disabled = false;
                submitBtn.classList.remove('btn-loading');

                this.showGlobalToast('Valores originales restaurados', 'info');
                this.formModified = false;
            },

            showGlobalToast(message, type) {
                const typeConfig = {
                    success: {
                        icon: 'check-circle',
                        bgColor: 'success',
                        textColor: 'text-success',
                        borderColor: 'border-success'
                    },
                    danger: {
                        icon: 'exclamation-circle',
                        bgColor: 'danger',
                        textColor: 'text-danger',
                        borderColor: 'border-danger'
                    },
                    warning: {
                        icon: 'exclamation-triangle',
                        bgColor: 'warning',
                        textColor: 'text-warning',
                        borderColor: 'border-warning'
                    },
                    info: {
                        icon: 'info-circle',
                        bgColor: 'info',
                        textColor: 'text-info',
                        borderColor: 'border-info'
                    }
                };

                const config = typeConfig[type] || typeConfig.info;
                const toastId = 'toast-' + Date.now() + Math.random().toString(36).substr(2, 9);

                let toastContainer = document.getElementById('toast-container');
                if (!toastContainer) {
                    toastContainer = document.createElement('div');
                    toastContainer.id = 'toast-container';
                    toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                    toastContainer.style.cssText = 'z-index: 1050; margin-top: 70px;';
                    document.body.appendChild(toastContainer);
                }

                const toastHtml = `
                    <div id="${toastId}"
                         class="toast align-items-center ${config.borderColor} border-2 fade-in"
                         role="alert"
                         aria-live="assertive"
                         aria-atomic="true"
                         data-bs-delay="5000">
                        <div class="d-flex">
                            <div class="toast-body d-flex align-items-center">
                                <i class="fas fa-${config.icon} ${config.textColor} me-3 fs-5"></i>
                                <div>
                                    <strong class="d-block fw-semibold">${type.charAt(0).toUpperCase() + type.slice(1)}</strong>
                                    <span class="small">${message}</span>
                                </div>
                            </div>
                            <button type="button"
                                    class="btn-close btn-close-dark me-2 m-auto"
                                    data-bs-dismiss="toast"
                                    aria-label="Close"></button>
                        </div>
                    </div>
                `;

                toastContainer.insertAdjacentHTML('beforeend', toastHtml);

                const toastEl = document.getElementById(toastId);
                const toast = new bootstrap.Toast(toastEl, {
                    autohide: true,
                    delay: 5000
                });

                toast.show();

                toastEl.addEventListener('hidden.bs.toast', function () {
                    this.remove();
                    if (toastContainer.children.length === 0) {
                        toastContainer.remove();
                    }
                });
            }
        };

        // Inicialización cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            formManager.init();
        });
    </script>
}