@model guia_turistico.Models.ImagenesSitios

@{
    ViewData["Title"] = "Agregar Imágenes";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-images me-2"></i>Agregar Imágenes
                    </h1>
                    <p class="lead mb-0 opacity-75">Agrega imágenes al sitio turístico seleccionado mediante URLs</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Create" id="imageForm" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Sección de Imagen -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header card-header-gradient py-3">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-camera me-2"></i>Gestión de Imágenes
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <!-- Selector de Sitio -->
                                <div class="form-group mb-4">
                                    <label asp-for="SitioTuristicoId" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>Sitio Turístico
                                    </label>
                                    <select asp-for="SitioTuristicoId"
                                            class="form-select form-select-lg"
                                            asp-items="ViewBag.SitioTuristicoId"
                                            required
                                            id="sitioSelect">
                                        <option value="" selected disabled>Selecciona un sitio turístico</option>
                                    </select>
                                    <span asp-validation-for="SitioTuristicoId" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Campo para agregar URL -->
                                <div class="form-group">
                                    <label for="imageUrlInput" class="form-label fw-semibold">
                                        URL de Imagen
                                    </label>
                                    <div class="input-group">
                                        <input type="url"
                                               class="form-control"
                                               placeholder="https://ejemplo.com/imagen.jpg"
                                               id="imageUrlInput">
                                        <button type="button" class="btn btn-success" id="addImageBtn">
                                            <i class="fas fa-plus-circle me-2"></i>Agregar
                                        </button>
                                    </div>
                                </div>

                                <!-- Campo oculto para la URL principal -->
                                <input asp-for="Url" type="hidden" id="UrlImagen" />
                            </div>
                        </div>

                        <!-- Panel de Vista Previa -->
                        <div class="col-lg-4 border-start bg-panel">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>
                                <div class="border rounded-3 p-3 bg-light-subtle text-center">
                                    <p class="text-muted mb-3">
                                        <i class="fas fa-image fa-2x"></i>
                                    </p>
                                    <p class="small mb-0">
                                        La imagen aparecerá aquí al agregar una URL
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Galería de Imágenes Agregadas (simplificada) -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header border-bottom py-3">
                    <h4 class="h5 mb-0">
                        <i class="fas fa-images me-2"></i>Galería de Imágenes
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        <p class="text-muted mb-0">Las imágenes que agregues aparecerán aquí</p>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de continuar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="reset" class="btn btn-outline-primary btn-lg px-5">
                                <i class="fas fa-redo me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Guardar Imagen
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageUrlInput = document.getElementById('imageUrlInput');
            const addImageBtn = document.getElementById('addImageBtn');
            const UrlImagen = document.getElementById('UrlImagen');
            const sitioSelect = document.getElementById('sitioSelect');
            const submitBtn = document.getElementById('submitBtn');

            // Agregar imagen al hacer clic en el botón
            if (addImageBtn) {
                addImageBtn.addEventListener('click', function() {
                    const url = imageUrlInput.value.trim();
                    if (url) {
                        UrlImagen.value = url;
                        alert('Imagen agregada. Ahora puedes guardar.');
                    }
                });
            }

            // Validación básica del formulario
            const form = document.getElementById('imageForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const sitioValue = sitioSelect.value;
                    const urlValue = UrlImagen.value;

                    // Validación simple
                    if (!sitioValue) {
                        e.preventDefault();
                        alert('Por favor, selecciona un sitio turístico');
                        sitioSelect.focus();
                        return false;
                    }

                    if (!urlValue.trim()) {
                        e.preventDefault();
                        alert('Por favor, agrega una URL de imagen');
                        imageUrlInput.focus();
                        return false;
                    }

                    // Cambiar estado del botón
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Guardando...';
                        submitBtn.disabled = true;
                    }

                    return true;
                });
            }
        });
    </script>
}