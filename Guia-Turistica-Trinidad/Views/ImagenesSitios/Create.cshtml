@model guia_turistico.Models.ImagenesSitios

@{
    ViewData["Title"] = "Agregar Imágenes";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-images me-2"></i>Agregar Imágenes
                    </h1>
                    <p class="lead mb-0 opacity-75">Agrega imágenes al sitio turístico seleccionado mediante URLs</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Create" id="imageForm" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Sección de Imagen -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary bg-gradient py-3 text-white">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-camera me-2"></i>Gestión de Imágenes
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <!-- Selector de Sitio -->
                                <div class="form-group mb-4">
                                    <label asp-for="SitioTuristicoId" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>Sitio Turístico *
                                    </label>
                                    <select asp-for="SitioTuristicoId"
                                            class="form-select"
                                            asp-items="ViewBag.SitioTuristicoId"
                                            required
                                            id="sitioSelect"
                                            data-bs-toggle="tooltip"
                                            data-bs-title="Selecciona el sitio al que agregar imágenes">
                                        <option value="" selected disabled>Selecciona un sitio turístico</option>
                                    </select>
                                    <span asp-validation-for="SitioTuristicoId" class="invalid-feedback d-block"></span>
                                </div>

                                <!-- Campo para agregar URL -->
                                <div class="form-group">
                                    <label for="imageUrlInput" class="form-label fw-semibold">
                                        URL de Imagen
                                    </label>
                                    <div class="input-group">
                                        <input type="url"
                                               class="form-control"
                                               placeholder="Ej: https://ejemplo.com/imagen-sitio.jpg"
                                               id="imageUrlInput"
                                               data-bs-toggle="tooltip"
                                               data-bs-title="URL de imagen válida (jpg, png, gif, webp, etc.)">
                                        <button type="button" class="btn btn-success" id="addImageBtn">
                                            <i class="fas fa-plus-circle me-2"></i>Agregar
                                        </button>
                                    </div>
                                    <span asp-validation-for="Url" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa -->
                        <div class="col-lg-4 border-start bg-light">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>

                                <div class="border rounded-3 p-3 bg-white">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-image me-2 text-success"></i>Imagen Seleccionada
                                    </h6>

                                    <div class="ratio ratio-1x1 mb-3">
                                        <img src="data:image/svg+xml;base64,"
                                             class="img-fluid rounded shadow-sm object-fit-cover"
                                             id="imagePreview"
                                             alt="Vista previa de la imagen">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Galería de Imágenes Agregadas -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header border-bottom py-3">
                    <h4 class="h5 mb-0">
                        <i class="fas fa-images me-2"></i>Galería de Imágenes
                        <span class="badge text-light bg-dark rounded-pill ms-2" id="galleryCountBadge">0</span>
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Estado vacío -->
                    <div class="text-center py-5" id="emptyState">
                        <div class="mb-3">
                            <i class="fas fa-images fa-3x text-light bg-dark p-4 rounded-circle"></i>
                        </div>
                        <h5 class="text-muted mb-2">No hay imágenes agregadas</h5>
                        <p class="text-muted small mb-0">Las imágenes que agregues aparecerán aquí como una galería</p>
                    </div>

                    <!-- Grid de imágenes -->
                    <div id="imageGallery" class="row g-4 d-none">
                        <!-- Las imágenes se agregarán aquí dinámicamente -->
                    </div>
                </div>
            </div>

            <!-- Campo oculto para todas las URLs -->
            <input type="hidden" id="allImageUrls" name="allImageUrls" />

            <!-- Acciones con Modal de Confirmación -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de continuar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-outline-danger btn-lg px-5"
                                    data-bs-toggle="modal" data-bs-target="#resetModal">
                                <i class="fas fa-redo me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn" disabled>
                                <i class="fas fa-save me-2"></i>Guardar Imágenes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación para Limpiar -->
<div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Limpieza
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas limpiar todos los campos?</p>
                <p class="text-muted small">Se perderán todas las imágenes agregadas.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmReset">
                    <i class="fas fa-redo me-2"></i>Limpiar Todo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para Mensajes -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Sistema</strong>
            <small>Ahora</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de ejemplo
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Configuración global
        const config = {
            isTestMode: window.navigator.webdriver === true ||
                       window.location.search.includes('testmode'),
            defaultImage: 'data:image/svg+xml;base64,',
            errorImage: 'data:image/svg+xml;base64,'
        };

        // Módulo para manejo del formulario de imágenes
        const formManager = {
            init() {
                // Configurar modo test si es necesario
                if (config.isTestMode) {
                    document.body.classList.add('test-mode');
                    console.log('✅ Modo de pruebas activado - Imágenes');
                }

                // Inicializar componentes básicos
                this.initBasicComponents();

                // Inicializar estado
                this.imageUrls = [];
                this.selectedImageUrl = null;

                // Inicializar galería
                this.initImageGallery();

                // Configurar validación según modo
                if (config.isTestMode) {
                    this.setupTestFriendlyForm();
                } else {
                    this.setupUserFriendlyForm();
                }

                // Actualizar UI
                this.updateUI();
            },

            initBasicComponents() {
                // Tooltips (solo si no es test)
                if (!config.isTestMode) {
                    try {
                        var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                        [...tooltips].forEach(el => new bootstrap.Tooltip(el));
                    } catch (e) {
                        console.log('Tooltips no disponibles:', e.message);
                    }
                }

                // Toast (si existe)
                try {
                    var toastEl = document.getElementById('liveToast');
                    if (toastEl) window.appToast = new bootstrap.Toast(toastEl);
                } catch (e) {}

                // Modal de reset
                this.setupResetModal();
            },

            initImageGallery() {
                // Elementos
                this.imageUrlInput = document.getElementById('imageUrlInput');
                this.addImageBtn = document.getElementById('addImageBtn');
                this.imageGallery = document.getElementById('imageGallery');
                this.emptyState = document.getElementById('emptyState');
                this.galleryCountBadge = document.getElementById('galleryCountBadge');
                this.submitBtn = document.getElementById('submitBtn');
                this.allImageUrls = document.getElementById('allImageUrls');
                this.sitioSelect = document.getElementById('sitioSelect');

                // Event Listeners
                if (this.addImageBtn) {
                    this.addImageBtn.addEventListener('click', () => this.addImage());
                }

                if (this.imageUrlInput) {
                    this.imageUrlInput.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            this.addImage();
                        }
                    });
                }

                if (this.sitioSelect) {
                    this.sitioSelect.addEventListener('change', () => this.updateUI());
                }
            },

            // ===== MODO USUARIO NORMAL =====
            setupUserFriendlyForm() {
                // Configurar vista previa de imagen
                this.setupImagePreview();

                // Configurar envío del formulario
                this.setupFormSubmission();
            },

            setupImagePreview() {
                const imageUrlInput = this.imageUrlInput;
                const imagePreview = document.getElementById('imagePreview');

                if (!imageUrlInput || !imagePreview) return;

                // Establecer imagen por defecto
                imagePreview.src = config.defaultImage;

                // Configurar validación de URL con debouncing
                let validationTimeout;
                imageUrlInput.addEventListener('input', () => {
                    clearTimeout(validationTimeout);

                    const url = imageUrlInput.value.trim();
                    if (!url) {
                        this.resetImagePreview();
                        return;
                    }

                    validationTimeout = setTimeout(() => {
                        this.validateImageUrl(url, imagePreview, imageUrlInput);
                    }, 800);
                });
            },

            validateImageUrl(url, previewElement, inputElement) {
                // Validación básica de URL
                try {
                    new URL(url);
                } catch {
                    this.showImageError('URL no válida', previewElement, inputElement);
                    return;
                }

                // Intentar cargar la imagen
                const img = new Image();
                img.onload = () => {
                    this.showImageSuccess(url, previewElement, inputElement);
                };
                img.onerror = () => {
                    this.showImageError('No se pudo cargar la imagen', previewElement, inputElement);
                };
                img.src = url;
            },

            showImageSuccess(url, previewElement, inputElement) {
                if (previewElement) previewElement.src = url;
                inputElement.classList.add('is-valid');
                inputElement.classList.remove('is-invalid');
            },

            showImageError(message, previewElement, inputElement) {
                if (previewElement) previewElement.src = config.errorImage;
                inputElement.classList.add('is-invalid');
                inputElement.classList.remove('is-valid');
            },

            resetImagePreview() {
                const preview = document.getElementById('imagePreview');
                const input = this.imageUrlInput;

                if (preview) preview.src = config.defaultImage;
                if (input) {
                    input.classList.remove('is-valid', 'is-invalid');
                }
            },

            setupFormSubmission() {
                const form = document.getElementById('imageForm');
                if (!form) return;

                form.addEventListener('submit', (e) => {
                    // Validar que se haya seleccionado un sitio
                    if (this.sitioSelect && !this.sitioSelect.value) {
                        e.preventDefault();
                        this.showMessage('Debes seleccionar un sitio turístico', 'danger');
                        this.sitioSelect.classList.add('is-invalid');
                        this.sitioSelect.focus();
                        return false;
                    }

                    // Validar que haya al menos una imagen
                    if (this.imageUrls.length === 0) {
                        e.preventDefault();
                        this.showMessage('Debes agregar al menos una imagen', 'danger');
                        if (this.imageUrlInput) {
                            this.imageUrlInput.classList.add('is-invalid');
                            this.imageUrlInput.focus();
                        }
                        return false;
                    }

                    // Mostrar estado de carga
                    if (this.submitBtn) {
                        this.submitBtn.disabled = true;
                        this.submitBtn.innerHTML = `
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Guardando...
                        `;
                    }

                    return true;
                });
            },

            // ===== MODO PRUEBAS (SELENIUM) =====
            setupTestFriendlyForm() {
                const form = document.getElementById('imageForm');
                if (!form) return;

                console.log('Configurando formulario para pruebas...');

                // Desactivar validaciones automáticas
                form.noValidate = true;
                form.classList.remove('needs-validation');

                // Simplificar vista previa
                const imagePreview = document.getElementById('imagePreview');
                if (imagePreview) {
                    imagePreview.src = config.defaultImage;
                }

                // Configurar envío simplificado
                form.addEventListener('submit', (e) => {
                    // Validación mínima
                    if (this.sitioSelect && !this.sitioSelect.value) {
                        e.preventDefault();
                        this.sitioSelect.classList.add('is-invalid');
                        return false;
                    }

                    if (this.imageUrls.length === 0) {
                        e.preventDefault();
                        if (this.imageUrlInput) {
                            this.imageUrlInput.classList.add('is-invalid');
                        }
                        return false;
                    }

                    // Estado de carga simplificado
                    if (this.submitBtn) {
                        this.submitBtn.disabled = true;
                        this.submitBtn.innerHTML = 'Guardando...';
                    }

                    return true;
                });
            },

            // ===== FUNCIONALIDADES COMUNES =====
            isValidImageUrl(url) {
                if (!url) return false;

                const imagePatterns = [
                    /\.(jpeg|jpg|jfif|pjpeg|pjp)$/i,
                    /\.(png)$/i,
                    /\.(gif)$/i,
                    /\.(bmp)$/i,
                    /\.(webp)$/i,
                    /\.(svg)$/i,
                    /\.(avif)$/i
                ];

                try {
                    const urlObj = new URL(url);
                    return imagePatterns.some(pattern => pattern.test(urlObj.pathname));
                } catch {
                    return false;
                }
            },

            addImage() {
                const url = this.imageUrlInput ? this.imageUrlInput.value.trim() : '';

                if (!url) {
                    this.showMessage('Por favor ingresa una URL', 'warning');
                    return;
                }

                if (!this.isValidImageUrl(url)) {
                    this.showMessage('Por favor ingresa una URL válida de imagen (jpg, png, gif, etc.)', 'danger');
                    return;
                }

                if (this.imageUrls.includes(url)) {
                    this.showMessage('Esta imagen ya ha sido agregada', 'warning');
                    return;
                }

                // Agregar a la lista
                this.imageUrls.push(url);

                // Crear card de imagen
                this.createImageCard(url);

                // Ocultar estado vacío
                if (this.emptyState && this.imageUrls.length === 1) {
                    this.emptyState.style.display = 'none';
                    this.imageGallery.classList.remove('d-none');
                }

                // Limpiar input
                if (this.imageUrlInput) {
                    this.imageUrlInput.value = '';
                    this.imageUrlInput.classList.remove('is-invalid', 'is-valid');
                }

                // Actualizar UI
                this.updateUI();
                if (this.imageUrlInput) this.imageUrlInput.focus();

                this.showMessage('Imagen agregada correctamente', 'success');
            },

            createImageCard(url) {
                const cardId = `imageCard_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                const cardHtml = `
                    <div class="col-md-6 col-lg-4 col-xl-3" id="${cardId}">
                        <div class="card h-100 shadow-sm image-card">
                            <div class="card-img-top ratio ratio-4x3">
                                <img src="${url}"
                                     class="object-fit-cover"
                                     alt="Imagen del sitio"
                                     onerror="this.onerror=null; this.src='${config.errorImage}'">
                                <button type="button" class="btn btn-danger btn-sm btn-remove"
                                        onclick="formManager.removeImage('${cardId}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <div class="card-body p-3">
                                <p class="card-text small text-truncate url-preview mb-0">${url}</p>
                            </div>
                        </div>
                    </div>
                `;

                this.imageGallery.insertAdjacentHTML('beforeend', cardHtml);
            },

            removeImage(cardId) {
                const cardElement = document.getElementById(cardId);
                if (cardElement) {
                    const imgElement = cardElement.querySelector('img');
                    const url = imgElement ? imgElement.src : null;

                    if (url) {
                        this.imageUrls = this.imageUrls.filter(u => u !== url);
                    }

                    cardElement.remove();
                    this.updateUI();

                    // Mostrar estado vacío si no hay imágenes
                    if (this.emptyState && this.imageUrls.length === 0) {
                        this.emptyState.style.display = 'block';
                        this.imageGallery.classList.add('d-none');
                    }

                    this.showMessage('Imagen eliminada', 'info');
                }
            },

            updateUI() {
                const imageCount = this.imageUrls.length;
                const sitioSelected = this.sitioSelect && this.sitioSelect.value && this.sitioSelect.value !== '';

                // Actualizar contador
                if (this.galleryCountBadge) {
                    this.galleryCountBadge.textContent = imageCount;
                    this.galleryCountBadge.className = 'badge rounded-pill ms-2 ' +
                        (imageCount === 0 ? 'bg-primary' :
                         imageCount < 3 ? 'bg-warning' : 'bg-success');
                }

                // Habilitar/deshabilitar botón de enviar
                if (this.submitBtn) {
                    this.submitBtn.disabled = imageCount === 0 || !sitioSelected;

                    // Actualizar texto del botón
                    if (imageCount === 0) {
                        this.submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Guardar Imágenes';
                    } else if (imageCount === 1) {
                        this.submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Guardar 1 Imagen';
                    } else {
                        this.submitBtn.innerHTML = `<i class="fas fa-save me-2"></i>Guardar ${imageCount} Imágenes`;
                    }
                }

                // Actualizar campo oculto
                if (this.allImageUrls) {
                    this.allImageUrls.value = JSON.stringify(this.imageUrls);
                }
            },

            setupResetModal() {
                const confirmBtn = document.getElementById('confirmReset');
                const modal = document.getElementById('resetModal');

                if (confirmBtn && modal) {
                    confirmBtn.addEventListener('click', () => {
                        const bsModal = bootstrap.Modal.getInstance(modal);
                        this.resetForm();
                        bsModal.hide();
                        this.showMessage('Formulario limpiado correctamente', 'success');
                    });
                }
            },

            resetForm() {
                // Limpiar array
                this.imageUrls = [];

                // Limpiar galería
                if (this.imageGallery) {
                    this.imageGallery.innerHTML = '';
                }

                // Restaurar estado vacío
                if (this.emptyState) {
                    this.emptyState.style.display = 'block';
                    this.imageGallery.classList.add('d-none');
                }

                // Resetear selects y inputs
                if (this.sitioSelect) {
                    this.sitioSelect.value = '';
                }
                if (this.imageUrlInput) {
                    this.imageUrlInput.value = '';
                    this.imageUrlInput.classList.remove('is-invalid', 'is-valid');
                }

                // Resetear vista previa
                this.resetImagePreview();

                // Actualizar UI
                this.updateUI();
            },

            showMessage(message, type = 'info') {
                // Intentar usar toast si existe
                const toastEl = document.getElementById('liveToast');
                const toastMsg = document.getElementById('toastMessage');

                if (toastEl && toastMsg && window.appToast) {
                    const iconMap = {
                        'success': 'check-circle',
                        'danger': 'exclamation-triangle',
                        'warning': 'exclamation-circle',
                        'info': 'info-circle'
                    };

                    const icon = toastEl.querySelector('i');
                    if (icon) {
                        icon.className = `fas fa-${iconMap[type] || 'info-circle'} me-2 text-${type}`;
                    }

                    toastMsg.textContent = message;
                    window.appToast.show();
                } else if (!config.isTestMode) {
                    alert(`${type.toUpperCase()}: ${message}`);
                } else {
                    console.log(`${type.toUpperCase()}: ${message}`);
                }
            }
        };

        // Inicialización cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            formManager.init();
        });
    </script>
}