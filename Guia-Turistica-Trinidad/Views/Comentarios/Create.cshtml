@model guia_turistico.Models.Comentarios

@{
    ViewData["Title"] = "Nuevo Comentario";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-comment me-2"></i>Nuevo Comentario
                    </h1>
                    <p class="lead mb-0 opacity-75">Agrega una reseña o comentario sobre un sitio turístico</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Create" id="commentForm" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Sección de Selección -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary bg-gradient py-3 text-white">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>Selección del Sitio
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Información del Sitio -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-search me-2 text-primary"></i>Buscar Sitio Turístico
                                </h5>

                                <div class="mb-4">
                                    <div class="form-group">
                                        <label asp-for="SitioTuristicoId" class="form-label fw-semibold">
                                            <i class="fas fa-landmark me-2 text-muted"></i>Sitio Turístico *
                                        </label>
                                        <select asp-for="SitioTuristicoId"
                                                class="form-select"
                                                asp-items="ViewBag.SitioTuristicoId"
                                                required
                                                id="sitioSelect"
                                                data-bs-toggle="tooltip"
                                                data-bs-title="Selecciona el sitio sobre el cual comentarás">
                                            <option value="" selected disabled>Selecciona un sitio turístico</option>
                                        </select>
                                        <span asp-validation-for="SitioTuristicoId" class="invalid-feedback"></span>
                                    </div>

                                    <!-- Auto-selección de usuario -->
                                    <div class="form-group mt-4">
                                        <label asp-for="UsuarioId" class="form-label fw-semibold">
                                            <i class="fas fa-user me-2 text-muted"></i>Usuario *
                                        </label>
                                        <select asp-for="UsuarioId"
                                                class="form-select"
                                                asp-items="ViewBag.UsuarioId"
                                                required
                                                id="usuarioSelect"
                                                data-bs-toggle="tooltip"
                                                data-bs-title="Usuario que realiza el comentario">
                                            <option value="" selected disabled>Selecciona un usuario</option>
                                        </select>
                                        <span asp-validation-for="UsuarioId" class="invalid-feedback"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Información del Sitio -->
                        <div class="col-lg-4 border-start bg-light">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-info-circle me-2 text-primary"></i>Detalles del Sitio
                                </h5>

                                <div class="border rounded-3 p-3 bg-white">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-landmark me-2 text-success"></i>Información del Sitio
                                    </h6>

                                    <div class="text-center py-4" id="emptySiteInfo">
                                        <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                                        <p class="text-muted mb-0">Selecciona un sitio para ver sus detalles</p>
                                    </div>

                                    <!-- Los detalles se cargarán dinámicamente -->
                                    <div id="siteDetails" class="d-none">
                                        <div class="mb-3">
                                            <strong class="d-block text-primary" id="siteName"></strong>
                                            <small class="text-muted" id="siteType"></small>
                                        </div>
                                        <div class="small">
                                            <p class="mb-2" id="siteDescription"></p>
                                            <div class="d-flex align-items-center gap-2">
                                                <i class="fas fa-map-pin text-muted"></i>
                                                <span id="siteAddress"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información del Comentario -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Contenido del Comentario -->
                <div class="col-lg-8">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-comment-dots me-2"></i>Contenido del Comentario
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Texto" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Comentario *
                                </label>
                                <textarea asp-for="Texto"
                                          class="form-control"
                                          rows="6"
                                          placeholder="Ej: Excelente lugar, la arquitectura es impresionante..."
                                          required
                                          id="textoInput"
                                          maxlength="1000"
                                          data-bs-toggle="tooltip"
                                          data-bs-title="Comparte tu experiencia personal en el sitio"></textarea>
                                <div class="form-text text-end">
                                    <span class="text-muted" id="textoCounter">0/1000</span>
                                </div>
                                <span asp-validation-for="Texto" class="invalid-feedback"></span>
                            </div>

                            <!-- Fecha de publicación -->
                            <div class="form-group">
                                <label asp-for="Fecha" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt me-2 text-muted"></i>Fecha del Comentario *
                                </label>
                                <input asp-for="Fecha"
                                       class="form-control"
                                       type="date"
                                       required
                                       id="fechaInput"
                                       data-bs-toggle="tooltip"
                                       data-bs-title="Fecha de tu visita o del comentario">
                                <span asp-validation-for="Fecha" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Puntuación y Calificación -->
                <div class="col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-star me-2"></i>Calificación
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Sistema de puntuación con estrellas -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold d-block">
                                    <i class="fas fa-star me-2 text-muted"></i>Puntuación *
                                </label>

                                <div class="text-center mb-3">
                                    <div class="rating-stars mb-2" id="ratingStars">
                                        <i class="fas fa-star fa-2x star text-muted" data-value="1"></i>
                                        <i class="fas fa-star fa-2x star text-muted" data-value="2"></i>
                                        <i class="fas fa-star fa-2x star text-muted" data-value="3"></i>
                                        <i class="fas fa-star fa-2x star text-muted" data-value="4"></i>
                                        <i class="fas fa-star fa-2x star text-muted" data-value="5"></i>
                                    </div>
                                    <small class="text-muted" id="ratingText">Haz clic en las estrellas para calificar</small>
                                </div>

                                <input type="hidden" asp-for="Puntuacion" id="puntuacionInput" value="0" />
                                <span asp-validation-for="Puntuacion" class="invalid-feedback"></span>
                            </div>

                            <!-- Preview de calificación -->
                            <div class="border rounded-3 p-3 bg-white mb-4">
                                <h6 class="fw-semibold mb-2">
                                    <i class="fas fa-info-circle me-2 text-info"></i>Tu Calificación
                                </h6>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div id="selectedRating" class="text-warning fs-4">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <span class="fw-semibold" id="ratingValue">0/5</span>
                                </div>
                                <div id="ratingDescription" class="small text-muted mt-2">Selecciona las estrellas</div>
                            </div>

                            <!-- Guía de puntuación -->
                            <div class="small">
                                <p class="mb-1"><i class="fas fa-star text-warning"></i> <strong>1:</strong> Mala experiencia</p>
                                <p class="mb-1"><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i> <strong>2:</strong> Regular</p>
                                <p class="mb-1"><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i> <strong>3:</strong> Buena</p>
                                <p class="mb-1"><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i> <strong>4:</strong> Muy buena</p>
                                <p><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i> <strong>5:</strong> Excelente</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de continuar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-outline-danger btn-lg px-5"
                                    data-bs-toggle="modal" data-bs-target="#resetModal">
                                <i class="fas fa-redo me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn">
                                <i class="fas fa-paper-plane me-2"></i>Publicar Comentario
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación para Limpiar -->
<div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Limpieza
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas limpiar todos los campos?</p>
                <p class="text-muted small">Se perderán todos los datos no guardados.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmReset">
                    <i class="fas fa-redo me-2"></i>Limpiar Todo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para Mensajes -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Sistema</strong>
            <small>Ahora</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de ejemplo
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Configuración global
        const config = {
            isTestMode: window.navigator.webdriver === true ||
                       window.location.search.includes('testmode')
        };

        // Inicialización principal
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inicializando formulario de comentarios...');

            // 1. Configurar modo test si es necesario
            if (config.isTestMode) {
                document.body.classList.add('test-mode');
                console.log('✅ Modo de pruebas activado');
            }

            // 2. Inicializar componentes básicos
            initBasicComponents();

            // 3. Configurar contadores
            setupCharacterCounters();

            // 4. Configurar sistema de puntuación
            setupRatingSystem();

            // 5. Configurar selección de sitio
            setupSiteSelection();

            // 6. Configurar fecha automática
            setupAutoDate();

            // 7. Configurar validación según modo
            if (config.isTestMode) {
                setupTestFriendlyForm();
            } else {
                setupUserFriendlyForm();
            }

            // 8. Configurar utilidades comunes
            setupUtilities();
        });

        // ===== INICIALIZACIÓN BÁSICA =====
        function initBasicComponents() {
            // Tooltips (solo si no es test y existen)
            if (!config.isTestMode) {
                try {
                    var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                    [...tooltips].forEach(el => new bootstrap.Tooltip(el));
                } catch (e) {
                    console.log('Tooltips no disponibles:', e.message);
                }
            }

            // Toast (si existe)
            try {
                var toastEl = document.getElementById('liveToast');
                if (toastEl) window.appToast = new bootstrap.Toast(toastEl);
            } catch (e) {}

            // Modal de reset
            setupResetModal();
        }

        // ===== CONTADORES DE CARACTERES =====
        function setupCharacterCounters() {
            const textoInput = document.getElementById('textoInput');
            const textoCounter = document.getElementById('textoCounter');

            if (textoInput && textoCounter) {
                const update = () => {
                    const length = textoInput.value.length;
                    textoCounter.textContent = `${length}/1000`;

                    if (!config.isTestMode) {
                        textoCounter.className = 'text-muted';
                        if (length > 900) textoCounter.classList.add('text-warning');
                        if (length > 1000) textoCounter.classList.add('text-danger');
                    }
                };

                textoInput.addEventListener('input', update);
                update(); // Estado inicial
            }
        }

        // ===== SISTEMA DE PUNTUACIÓN =====
        function setupRatingSystem() {
            const stars = document.querySelectorAll('.star');
            const puntuacionInput = document.getElementById('puntuacionInput');
            const selectedRating = document.getElementById('selectedRating');
            const ratingValue = document.getElementById('ratingValue');
            const ratingDescription = document.getElementById('ratingDescription');
            const ratingText = document.getElementById('ratingText');

            const ratingMessages = {
                0: { text: "Selecciona las estrellas", desc: "Sin calificar" },
                1: { text: "Mala experiencia", desc: "No lo recomendaría" },
                2: { text: "Regular", desc: "Podría mejorar" },
                3: { text: "Buena", desc: "Satisfactorio" },
                4: { text: "Muy buena", desc: "Lo recomendaría" },
                5: { text: "Excelente", desc: "Altamente recomendado" }
            };

            function updateRatingDisplay(rating) {
                // Actualizar estrellas visuales
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.remove('text-muted');
                        star.classList.add('text-warning');
                    } else {
                        star.classList.remove('text-warning');
                        star.classList.add('text-muted');
                    }
                });

                // Actualizar preview de calificación
                const starsHtml = Array(5).fill(0).map((_, i) =>
                    `<i class="fas fa-star${i < rating ? ' text-warning' : ' text-muted opacity-50'}"></i>`
                ).join('');

                selectedRating.innerHTML = starsHtml;
                ratingValue.textContent = `${rating}/5`;

                // Actualizar textos
                const msg = ratingMessages[rating];
                ratingDescription.textContent = msg.desc;
                ratingText.textContent = msg.text;
                ratingText.className = rating >= 4 ? 'text-success' :
                                      rating >= 3 ? 'text-primary' :
                                      rating >= 1 ? 'text-warning' : 'text-muted';

                // Actualizar campo oculto
                puntuacionInput.value = rating;
            }

            // Eventos para las estrellas
            stars.forEach(star => {
                star.addEventListener('click', (e) => {
                    const rating = parseInt(e.target.dataset.value);
                    updateRatingDisplay(rating);
                });

                star.addEventListener('mouseover', (e) => {
                    const hoverRating = parseInt(e.target.dataset.value);
                    stars.forEach((s, index) => {
                        if (index < hoverRating) {
                            s.classList.add('text-warning');
                            s.classList.remove('text-muted');
                        }
                    });
                });

                star.addEventListener('mouseout', () => {
                    const currentRating = parseInt(puntuacionInput.value);
                    updateRatingDisplay(currentRating);
                });
            });

            // Inicializar con valor 0
            updateRatingDisplay(0);
        }

        // ===== SELECCIÓN DE SITIO =====
        function setupSiteSelection() {
            const sitioSelect = document.getElementById('sitioSelect');
            const emptySiteInfo = document.getElementById('emptySiteInfo');
            const siteDetails = document.getElementById('siteDetails');

            // Ejemplo de datos (en producción vendría de una API)
            const sampleSites = {
                "1": {
                    nombre: "Catedral de la Santísima Trinidad",
                    tipo: "Arquitectura Religiosa",
                    descripcion: "Impresionante catedral del siglo XIX con arquitectura colonial.",
                    direccion: "Plaza Principal, Trinidad, Beni"
                },
                "2": {
                    nombre: "Museo Etnoarqueológico",
                    tipo: "Museo",
                    descripcion: "Museo que muestra la cultura e historia de las etnias locales.",
                    direccion: "Calle Bolívar #123, Trinidad"
                }
            };

            sitioSelect.addEventListener('change', function() {
                const selectedId = this.value;

                if (selectedId && sampleSites[selectedId]) {
                    const site = sampleSites[selectedId];

                    // Actualizar panel de detalles
                    document.getElementById('siteName').textContent = site.nombre;
                    document.getElementById('siteType').textContent = site.tipo;
                    document.getElementById('siteDescription').textContent = site.descripcion;
                    document.getElementById('siteAddress').textContent = site.direccion;

                    // Mostrar detalles, ocultar estado vacío
                    emptySiteInfo.style.display = 'none';
                    siteDetails.classList.remove('d-none');
                } else {
                    // Mostrar estado vacío, ocultar detalles
                    emptySiteInfo.style.display = 'block';
                    siteDetails.classList.add('d-none');
                }
            });
        }

        // ===== FECHA AUTOMÁTICA =====
        function setupAutoDate() {
            const fechaInput = document.getElementById('fechaInput');

            // Si no hay valor, establecer fecha actual
            if (!fechaInput.value) {
                const today = new Date().toISOString().split('T')[0];
                fechaInput.value = today;
            }

            // Validar que no sea fecha futura
            fechaInput.addEventListener('change', function() {
                const selectedDate = new Date(this.value);
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                if (selectedDate > today) {
                    this.classList.add('is-invalid');
                    showMessage('La fecha no puede ser futura', 'warning');
                } else {
                    this.classList.remove('is-invalid');
                }
            });
        }

        // ===== MODO USUARIO NORMAL =====
        function setupUserFriendlyForm() {
            const form = document.getElementById('commentForm');
            const submitBtn = document.getElementById('submitBtn');

            if (!form || !submitBtn) return;

            // Configurar validación en tiempo real
            setupRealTimeValidation(form);

            // Configurar envío del formulario
            form.addEventListener('submit', function(e) {
                if (!validateFormBeforeSubmit()) {
                    e.preventDefault();
                    return false;
                }

                // Mostrar estado de carga
                submitBtn.disabled = true;
                submitBtn.innerHTML = `
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    Publicando...
                `;

                return true;
            });
        }

        // ===== MODO PRUEBAS (SELENIUM) =====
        function setupTestFriendlyForm() {
            const form = document.getElementById('commentForm');
            const submitBtn = document.getElementById('submitBtn');

            if (!form || !submitBtn) return;

            console.log('Configurando formulario para pruebas...');

            // Desactivar validaciones automáticas
            form.noValidate = true;
            form.classList.remove('needs-validation');

            // Simplificar envío del formulario
            form.addEventListener('submit', function(e) {
                // Validación mínima: solo campos requeridos
                let isValid = true;
                const requiredFields = ['SitioTuristicoId', 'UsuarioId', 'Texto', 'Fecha', 'Puntuacion'];

                requiredFields.forEach(fieldName => {
                    const field = form.querySelector(`[name="${fieldName}"]`);
                    if (field && !field.value) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    }
                });

                // Validar puntuación mayor a 0
                const puntuacionInput = document.getElementById('puntuacionInput');
                if (puntuacionInput && parseInt(puntuacionInput.value) === 0) {
                    isValid = false;
                    puntuacionInput.classList.add('is-invalid');
                }

                if (!isValid) {
                    e.preventDefault();
                    return false;
                }

                // Estado de carga simplificado
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Enviando...';

                return true;
            });
        }

        // ===== VALIDACIÓN EN TIEMPO REAL =====
        function setupRealTimeValidation(form) {
            form.querySelectorAll('input, textarea, select').forEach(field => {
                field.addEventListener('blur', function() {
                    validateSingleField(this);
                });
            });
        }

        function validateSingleField(field) {
            if (field.hasAttribute('required') && !field.value.trim()) {
                field.classList.add('is-invalid');
                field.classList.remove('is-valid');
                return false;
            }

            if (field.hasAttribute('maxlength')) {
                const max = parseInt(field.getAttribute('maxlength'));
                if (field.value.length > max) {
                    field.classList.add('is-invalid');
                    field.classList.remove('is-valid');
                    return false;
                }
            }

            // Validación especial para fecha
            if (field.type === 'date' && field.value) {
                const selectedDate = new Date(field.value);
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                if (selectedDate > today) {
                    field.classList.add('is-invalid');
                    field.classList.remove('is-valid');
                    return false;
                }
            }

            if (field.value.trim()) {
                field.classList.add('is-valid');
                field.classList.remove('is-invalid');
            } else {
                field.classList.remove('is-valid', 'is-invalid');
            }

            return true;
        }

        function validateFormBeforeSubmit() {
            let isValid = true;
            const form = document.getElementById('commentForm');

            // Validar campos requeridos
            const requiredFields = [
                { name: 'SitioTuristicoId', message: 'Debes seleccionar un sitio turístico' },
                { name: 'UsuarioId', message: 'Debes seleccionar un usuario' },
                { name: 'Texto', message: 'El comentario es requerido' },
                { name: 'Fecha', message: 'La fecha es requerida' }
            ];

            requiredFields.forEach(field => {
                const input = form.querySelector(`[name="${field.name}"]`);
                if (input && !input.value.trim()) {
                    isValid = false;
                    input.classList.add('is-invalid');
                    showMessage(field.message, 'danger');
                    if (field.name === 'SitioTuristicoId') input.focus();
                }
            });

            // Validar puntuación
            const puntuacionInput = form.querySelector('[name="Puntuacion"]');
            if (puntuacionInput && parseInt(puntuacionInput.value) === 0) {
                isValid = false;
                puntuacionInput.classList.add('is-invalid');
                showMessage('Debes calificar el sitio con estrellas', 'danger');

                // Resaltar las estrellas
                const starsContainer = document.getElementById('ratingStars');
                if (starsContainer) {
                    starsContainer.style.boxShadow = '0 0 0 0.25rem rgba(220,53,69,.25)';
                    setTimeout(() => {
                        starsContainer.style.boxShadow = '';
                    }, 3000);
                }
            }

            return isValid;
        }

        // ===== MODAL DE RESET =====
        function setupResetModal() {
            const confirmBtn = document.getElementById('confirmReset');
            const modal = document.getElementById('resetModal');

            if (confirmBtn && modal) {
                confirmBtn.addEventListener('click', function() {
                    const bsModal = bootstrap.Modal.getInstance(modal);
                    resetForm();
                    bsModal.hide();
                    showMessage('Formulario limpiado correctamente', 'success');
                });
            }
        }

        function resetForm() {
            const form = document.getElementById('commentForm');
            if (form) {
                form.reset();
                form.classList.remove('was-validated');

                // Resetear validaciones
                form.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });

                // Resetear rating
                setupRatingSystem();

                // Resetear selección de sitio
                const emptySiteInfo = document.getElementById('emptySiteInfo');
                const siteDetails = document.getElementById('siteDetails');
                if (emptySiteInfo) emptySiteInfo.style.display = 'block';
                if (siteDetails) siteDetails.classList.add('d-none');

                // Resetear contadores
                setupCharacterCounters();

                // Resetear fecha a hoy
                const fechaInput = document.getElementById('fechaInput');
                if (fechaInput) {
                    const today = new Date().toISOString().split('T')[0];
                    fechaInput.value = today;
                }

                // Resetear botón
                const submitBtn = document.getElementById('submitBtn');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Publicar Comentario';
                }
            }
        }

        // ===== UTILIDADES =====
        function setupUtilities() {
            // Nada especial aquí por ahora
        }

        function showMessage(message, type = 'info') {
            // Intentar usar toast si existe
            const toastEl = document.getElementById('liveToast');
            const toastMsg = document.getElementById('toastMessage');

            if (toastEl && toastMsg && window.appToast) {
                const iconMap = {
                    'success': 'check-circle',
                    'danger': 'exclamation-triangle',
                    'warning': 'exclamation-circle',
                    'info': 'info-circle'
                };

                const icon = toastEl.querySelector('i');
                if (icon) {
                    icon.className = `fas fa-${iconMap[type] || 'info-circle'} me-2 text-${type}`;
                }

                toastMsg.textContent = message;
                window.appToast.show();
            } else if (!config.isTestMode) {
                alert(`${type.toUpperCase()}: ${message}`);
            } else {
                console.log(`${type.toUpperCase()}: ${message}`);
            }
        }
