@model IEnumerable<guia_turistico.Models.Comentarios>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Comentarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Texto)</th>
                <th>@Html.DisplayNameFor(model => model.Puntuacion)</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.SitioTuristico)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @Html.DisplayFor(modelItem => item.Texto)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Puntuacion)</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.SitioTuristico.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ComentarioId" class="btn btn-sm btn-warning me-2">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ComentarioId" class="btn btn-sm btn-info me-2 text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.ComentarioId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
