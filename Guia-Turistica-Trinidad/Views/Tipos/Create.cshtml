@model guia_turistico.Models.Tipos
@{
    ViewData["Title"] = "Nuevo Tipo de Sitio Turístico";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-tag me-2"></i>Nuevo Tipo de Sitio Turístico
                    </h1>
                    <p class="lead mb-0 opacity-75">Crea una nueva categoría para clasificar los sitios turísticos</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Create" id="typeForm" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Sección de Imagen -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header bg-primary bg-gradient py-3 text-white">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-image me-2"></i>Imagen Representativa
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <div class="mb-4">
                                    <div class="form-group">
                                        <label asp-for="ImagenUrl" class="form-label fw-semibold">
                                            URL de Imagen
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-link"></i>
                                            </span>
                                            <input asp-for="ImagenUrl"
                                                   class="form-control"
                                                   placeholder="Ej: https://ejemplo.com/imagen-tipo.jpg"
                                                   id="imageUrlInput"
                                                   type="url"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-title="Ejemplo: https://ejemplo.com/imagen.jpg (JPG, PNG, etc.)">
                                        </div>
                                        <span asp-validation-for="ImagenUrl" class="invalid-feedback d-block"></span>
                                    </div>

                                    <!-- Feedback de validación Bootstrap -->
                                    <div class="valid-feedback" id="urlValidFeedback">
                                        <i class="fas fa-check-circle me-1"></i>URL de imagen válida
                                    </div>
                                    <div class="invalid-feedback" id="urlInvalidFeedback">
                                        <i class="fas fa-exclamation-circle me-1"></i>No se pudo cargar la imagen
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa -->
                        <div class="col-lg-4 border-start bg-light">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>

                                <div class="border rounded-3 p-3 bg-white">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-image me-2 text-success"></i>Imagen del Tipo
                                    </h6>

                                    <!-- Vista previa de imagen -->
                                    <div class="ratio ratio-1x1 mb-3">
                                        <img src="data:image/svg+xml;base64,"
                                             class="img-fluid rounded shadow-sm object-fit-cover"
                                             id="imagePreview"
                                             alt="Vista previa de la imagen">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Principal del Tipo -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Información en Español -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-flag me-2"></i>Información en Español
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-2 text-muted"></i>Nombre del Tipo *
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Playa, Museo, Parque Nacional"
                                       required
                                       maxlength="50"
                                       data-bs-toggle="tooltip"
                                       data-bs-title="Nombre único para identificar este tipo de sitio turístico">
                                <div class="form-text text-end">
                                    <span class="text-muted" id="nombreCounter">0/50</span>
                                </div>
                                <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-0">
                                <label asp-for="Descripcion" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Descripción
                                </label>
                                <textarea asp-for="Descripcion"
                                          class="form-control"
                                          rows="5"
                                          placeholder="Ej: Sitios con acceso al mar, arena y servicios playeros..."
                                          maxlength="500"
                                          data-bs-toggle="tooltip"
                                          data-bs-title="Características comunes de este tipo de sitio"></textarea>
                                <div class="form-text text-end">
                                    <span class="text-muted" id="descripcionCounter">0/500</span>
                                </div>
                                <span asp-validation-for="Descripcion" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Traducciones -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-language me-2"></i>Información Multilingüe
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Pestañas para idiomas con Bootstrap -->
                            <ul class="nav nav-tabs mb-4" id="langTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active"
                                            id="english-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#english"
                                            type="button"
                                            role="tab"
                                            aria-controls="english"
                                            aria-selected="true">
                                        <i class="fas fa-language me-1"></i> Inglés
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link"
                                            id="portuguese-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#portuguese"
                                            type="button"
                                            role="tab"
                                            aria-controls="portuguese"
                                            aria-selected="false">
                                        <i class="fas fa-language me-1"></i> Portugués
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="langTabsContent">
                                <!-- Inglés -->
                                <div class="tab-pane fade show active"
                                     id="english"
                                     role="tabpanel"
                                     aria-labelledby="english-tab"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombreIngles" class="form-label fw-semibold">
                                            Nombre en Inglés
                                        </label>
                                        <input asp-for="NombreIngles"
                                               class="form-control"
                                               placeholder="Ej: Beach, Museum, National Park"
                                               maxlength="50"
                                               data-bs-toggle="tooltip"
                                               data-bs-title="Traducción al inglés para internacionalización">
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="nombreInglesCounter">0/50</span>
                                        </div>
                                        <span asp-validation-for="NombreIngles" class="invalid-feedback"></span>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionIngles" class="form-label fw-semibold">
                                            Descripción en Inglés
                                        </label>
                                        <textarea asp-for="DescripcionIngles"
                                                  class="form-control"
                                                  rows="4"
                                                  placeholder="Ej: Sites with sea access, sand and beach services..."
                                                  maxlength="500"
                                                  data-bs-toggle="tooltip"
                                                  data-bs-title="Descripción en inglés para visitantes extranjeros"></textarea>
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="descripcionInglesCounter">0/500</span>
                                        </div>
                                        <span asp-validation-for="DescripcionIngles" class="invalid-feedback"></span>
                                    </div>
                                </div>

                                <!-- Portugués -->
                                <div class="tab-pane fade"
                                     id="portuguese"
                                     role="tabpanel"
                                     aria-labelledby="portuguese-tab"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombrePortugues" class="form-label fw-semibold">
                                            Nombre en Portugués
                                        </label>
                                        <input asp-for="NombrePortugues"
                                               class="form-control"
                                               placeholder="Ej: Praia, Museu, Parque Nacional"
                                               maxlength="50"
                                               data-bs-toggle="tooltip"
                                               data-bs-title="Traducción al portugués para visitantes brasileños">
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="nombrePortuguesCounter">0/50</span>
                                        </div>
                                        <span asp-validation-for="NombrePortugues" class="invalid-feedback"></span>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionPortugues" class="form-label fw-semibold">
                                            Descripción en Portugués
                                        </label>
                                        <textarea asp-for="DescripcionPortugues"
                                                  class="form-control"
                                                  rows="4"
                                                  placeholder="Ej: Locais com acesso ao mar, areia e serviços de praia..."
                                                  maxlength="500"
                                                  data-bs-toggle="tooltip"
                                                  data-bs-title="Descripción en portugués para visitantes lusófonos"></textarea>
                                        <div class="form-text text-end">
                                            <span class="text-muted" id="descripcionPortuguesCounter">0/500</span>
                                        </div>
                                        <span asp-validation-for="DescripcionPortugues" class="invalid-feedback"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones con Modal de Confirmación Bootstrap -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de continuar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-outline-danger btn-lg px-5"
                                    data-bs-toggle="modal" data-bs-target="#resetModal">
                                <i class="fas fa-redo me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Crear Tipo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación para Limpiar (Bootstrap) -->
<div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Limpieza
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas limpiar todos los campos?</p>
                <p class="text-muted small">Se perderán todos los datos no guardados.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmReset">
                    <i class="fas fa-redo me-2"></i>Limpiar Todo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast para Mensajes (Bootstrap) -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Sistema</strong>
            <small>Ahora</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Mensaje de ejemplo
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Configuración global
        const config = {
            isTestMode: window.navigator.webdriver === true ||
                       window.location.search.includes('testmode'),
            defaultImage: 'data:image/svg+xml;base64,',
            errorImage: 'data:image/svg+xml;base64,'
        };

        // Inicialización principal
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inicializando formulario de creación de tipo...');

            // 1. Configurar modo test si es necesario
            if (config.isTestMode) {
                document.body.classList.add('test-mode');
                console.log('✅ Modo de pruebas activado');
            }

            // 2. Inicializar componentes básicos
            initBasicComponents();

            // 3. Configurar contadores
            setupCharacterCounters();

            // 4. Configurar validación según modo
            if (config.isTestMode) {
                setupTestFriendlyForm();
            } else {
                setupUserFriendlyForm();
            }

            // 5. Configurar utilidades comunes
            setupUtilities();
        });

        // ===== INICIALIZACIÓN BÁSICA =====
        function initBasicComponents() {
            // Tooltips (solo si no es test y existen)
            if (!config.isTestMode) {
                try {
                    var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                    [...tooltips].forEach(el => new bootstrap.Tooltip(el));
                } catch (e) {
                    console.log('Tooltips no disponibles:', e.message);
                }
            }

            // Toast (si existe)
            try {
                var toastEl = document.getElementById('liveToast');
                if (toastEl) window.appToast = new bootstrap.Toast(toastEl);
            } catch (e) {}

            // Modal de reset
            setupResetModal();
        }

        // ===== CONTADORES DE CARACTERES =====
        function setupCharacterCounters() {
            const fields = [
                { name: 'Nombre', counterId: 'nombreCounter', max: 50 },
                { name: 'Descripcion', counterId: 'descripcionCounter', max: 500 },
                { name: 'NombreIngles', counterId: 'nombreInglesCounter', max: 50 },
                { name: 'DescripcionIngles', counterId: 'descripcionInglesCounter', max: 500 },
                { name: 'NombrePortugues', counterId: 'nombrePortuguesCounter', max: 50 },
                { name: 'DescripcionPortugues', counterId: 'descripcionPortuguesCounter', max: 500 }
            ];

            fields.forEach(field => {
                const input = document.querySelector(`[name="${field.name}"]`);
                const counter = document.getElementById(field.counterId);

                if (input && counter) {
                    const update = () => {
                        const length = input.value.length;
                        counter.textContent = `${length}/${field.max}`;

                        if (!config.isTestMode) {
                            counter.className = 'text-muted';
                            if (length > field.max * 0.9) counter.classList.add('text-warning');
                            if (length > field.max) counter.classList.add('text-danger');
                        }
                    };

                    input.addEventListener('input', update);
                    update(); // Estado inicial
                }
            });
        }

        // ===== MODO USUARIO NORMAL =====
        function setupUserFriendlyForm() {
            const form = document.getElementById('typeForm');
            const submitBtn = document.getElementById('submitBtn');

            if (!form || !submitBtn) return;

            // Configurar vista previa de imagen
            setupImagePreview();

            // Configurar auto-capitalización
            setupAutoCapitalization();

            // Configurar validación en tiempo real
            setupRealTimeValidation(form);

            // Configurar envío del formulario
            form.addEventListener('submit', function(e) {
                if (!validateFormBeforeSubmit()) {
                    e.preventDefault();
                    return false;
                }

                // Mostrar estado de carga
                submitBtn.disabled = true;
                submitBtn.innerHTML = `
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    Creando...
                `;

                return true;
            });
        }

        // ===== MODO PRUEBAS (SELENIUM) =====
        function setupTestFriendlyForm() {
            const form = document.getElementById('typeForm');
            const submitBtn = document.getElementById('submitBtn');

            if (!form || !submitBtn) return;

            console.log('Configurando formulario para pruebas...');

            // Desactivar validaciones automáticas
            form.noValidate = true;
            form.classList.remove('needs-validation');

            // Simplificar envío del formulario
            form.addEventListener('submit', function(e) {
                // Validación mínima: solo campo requerido
                const nombreInput = document.querySelector('[name="Nombre"]');
                if (!nombreInput || !nombreInput.value.trim()) {
                    e.preventDefault();
                    if (nombreInput) {
                        nombreInput.classList.add('is-invalid');
                        nombreInput.focus();
                    }
                    return false;
                }

                // Estado de carga simplificado
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Enviando...';

                return true;
            });

            // Configurar imagen preview simple
            const imagePreview = document.getElementById('imagePreview');
            const imageUrlInput = document.getElementById('imageUrlInput');

            if (imagePreview) {
                imagePreview.src = config.defaultImage;
                imagePreview.onerror = function() {
                    this.src = config.errorImage;
                };
            }

            if (imageUrlInput) {
                imageUrlInput.addEventListener('input', function() {
                    if (imagePreview && this.value.trim()) {
                        imagePreview.src = this.value;
                    }
                });
            }
        }

        // ===== VISTA PREVIA DE IMAGEN (solo usuario normal) =====
        function setupImagePreview() {
            const imageUrlInput = document.getElementById('imageUrlInput');
            const imagePreview = document.getElementById('imagePreview');

            if (!imageUrlInput || !imagePreview) return;

            // Establecer imagen por defecto
            imagePreview.src = config.defaultImage;

            // Configurar validación de URL con debouncing
            let validationTimeout;
            imageUrlInput.addEventListener('input', function() {
                clearTimeout(validationTimeout);

                const url = this.value.trim();
                if (!url) {
                    resetImagePreview();
                    return;
                }

                validationTimeout = setTimeout(() => {
                    validateImageUrl(url, imagePreview, this);
                }, 800);
            });
        }

        function validateImageUrl(url, previewElement, inputElement) {
            // Validación básica de URL
            try {
                new URL(url);
            } catch {
                showImageError('URL no válida', previewElement, inputElement);
                return;
            }

            // Intentar cargar la imagen
            const img = new Image();
            img.onload = function() {
                previewElement.src = url;
                inputElement.classList.add('is-valid');
                inputElement.classList.remove('is-invalid');
            };

            img.onerror = function() {
                showImageError('No se pudo cargar la imagen', previewElement, inputElement);
            };

            img.src = url;
        }

        function showImageError(message, previewElement, inputElement) {
            previewElement.src = config.errorImage;
            inputElement.classList.add('is-invalid');
            inputElement.classList.remove('is-valid');
        }

        function resetImagePreview() {
            const preview = document.getElementById('imagePreview');
            const input = document.getElementById('imageUrlInput');

            if (preview) preview.src = config.defaultImage;
            if (input) {
                input.classList.remove('is-valid', 'is-invalid');
            }
        }

        // ===== VALIDACIÓN EN TIEMPO REAL =====
        function setupRealTimeValidation(form) {
            form.querySelectorAll('input, textarea').forEach(field => {
                field.addEventListener('blur', function() {
                    validateSingleField(this);
                });
            });
        }

        function validateSingleField(field) {
            if (field.hasAttribute('required') && !field.value.trim()) {
                field.classList.add('is-invalid');
                field.classList.remove('is-valid');
                return false;
            }

            if (field.hasAttribute('maxlength')) {
                const max = parseInt(field.getAttribute('maxlength'));
                if (field.value.length > max) {
                    field.classList.add('is-invalid');
                    field.classList.remove('is-valid');
                    return false;
                }
            }

            if (field.value.trim()) {
                field.classList.add('is-valid');
                field.classList.remove('is-invalid');
            } else {
                field.classList.remove('is-valid', 'is-invalid');
            }

            return true;
        }

        function validateFormBeforeSubmit() {
            let isValid = true;
            const form = document.getElementById('typeForm');

            // Validar campo Nombre (requerido)
            const nombreInput = form.querySelector('[name="Nombre"]');
            if (!nombreInput || !nombreInput.value.trim()) {
                isValid = false;
                nombreInput.classList.add('is-invalid');
                nombreInput.focus();
                showMessage('El nombre en español es requerido', 'danger');
            }

            return isValid;
        }

        // ===== AUTO-CAPITALIZACIÓN =====
        function setupAutoCapitalization() {
            const nameFields = ['Nombre', 'NombreIngles', 'NombrePortugues'];

            nameFields.forEach(fieldName => {
                const field = document.querySelector(`[name="${fieldName}"]`);
                if (field) {
                    field.addEventListener('blur', function() {
                        if (this.value.trim()) {
                            this.value = this.value.trim()
                                .toLowerCase()
                                .replace(/\b\w/g, l => l.toUpperCase());
                        }
                    });
                }
            });
        }

        // ===== MODAL DE RESET =====
        function setupResetModal() {
            const confirmBtn = document.getElementById('confirmReset');
            const modal = document.getElementById('resetModal');

            if (confirmBtn && modal) {
                confirmBtn.addEventListener('click', function() {
                    const bsModal = bootstrap.Modal.getInstance(modal);
                    resetForm();
                    bsModal.hide();
                    showMessage('Formulario limpiado correctamente', 'success');
                });
            }
        }

        function resetForm() {
            const form = document.getElementById('typeForm');
            if (form) {
                form.reset();
                form.classList.remove('was-validated');

                // Resetear validaciones
                form.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });

                // Resetear imagen
                resetImagePreview();

                // Resetear contadores
                setupCharacterCounters();
            }
        }

        // ===== UTILIDADES =====
        function setupUtilities() {
            // Nada especial aquí por ahora
        }

        function showMessage(message, type = 'info') {
            // Intentar usar toast si existe
            const toastEl = document.getElementById('liveToast');
            const toastMsg = document.getElementById('toastMessage');

            if (toastEl && toastMsg && window.appToast) {
                const iconMap = {
                    'success': 'check-circle',
                    'danger': 'exclamation-triangle',
                    'warning': 'exclamation-circle',
                    'info': 'info-circle'
                };

                const icon = toastEl.querySelector('i');
                if (icon) {
                    icon.className = `fas fa-${iconMap[type] || 'info-circle'} me-2 text-${type}`;
                }

                toastMsg.textContent = message;
                window.appToast.show();
            } else {
                // Fallback a alert si no hay toast
                console.log(`${type.toUpperCase()}: ${message}`);
            }
        }
    </script>

