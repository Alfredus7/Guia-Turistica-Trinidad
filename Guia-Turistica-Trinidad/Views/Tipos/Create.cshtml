@model guia_turistico.Models.Tipos
@{
    ViewData["Title"] = "Nuevo Tipo de Sitio Turístico";
}

<div class="container py-4">
    <!-- Header con navegación -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-tag me-2"></i>Nuevo Tipo de Sitio Turístico
                    </h1>
                    <p class="lead mb-0 opacity-75">Crea una nueva categoría para clasificar los sitios turísticos</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal -->
    <div class="container py-4">
        <form asp-action="Create" id="typeForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Sección de Imagen -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header card-header-gradient py-3">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-image me-2"></i>Imagen Representativa
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <div class="form-group">
                                    <label asp-for="ImagenUrl" class="form-label fw-semibold">
                                        URL de Imagen
                                    </label>
                                    <input asp-for="ImagenUrl"
                                           class="form-control form-control-lg"
                                           placeholder="https://ejemplo.com/imagen-tipo.jpg"
                                           id="imageUrlInput"
                                           type="url">
                                    <span asp-validation-for="ImagenUrl" class="text-danger small mt-1 d-block"></span>
                                    <div class="form-text">
                                        URL de una imagen que represente este tipo de sitio
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa (solo visual) -->
                        <div class="col-lg-4 border-start bg-panel">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>
                                <div class="border rounded-3 p-3 bg-light-subtle text-center">
                                    <p class="text-muted mb-3">
                                        <i class="fas fa-image fa-2x"></i>
                                    </p>
                                    <p class="small mb-0">
                                        La imagen aparecerá aquí después de guardar
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Principal del Tipo -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Información en Español -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-flag me-2"></i>Información en Español
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-2 text-muted"></i>Nombre del Tipo
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Playa, Museo, Parque"
                                       required
                                       id="nombreInput">
                                <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="mb-0">
                                <label asp-for="Descripcion" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Descripción
                                </label>
                                <textarea asp-for="Descripcion"
                                          class="form-control"
                                          rows="5"
                                          placeholder="Describe este tipo de sitio turístico en español..."
                                          id="descripcionInput"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Traducciones -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-language me-2"></i>Información Multilingüe
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Pestañas para idiomas simplificadas -->
                            <div class="mb-4">
                                <div class="d-flex border-bottom mb-3">
                                    <button type="button" class="btn btn-outline-primary btn-sm me-2 active"
                                            onclick="showLanguageTab('english')">
                                        Inglés
                                    </button>
                                    <button type="button" class="btn btn-outline-primary btn-sm"
                                            onclick="showLanguageTab('portuguese')">
                                        Portugués
                                    </button>
                                </div>
                            </div>

                            <!-- Contenido de pestañas -->
                            <div id="englishContent">
                                <div class="mb-4">
                                    <label asp-for="NombreIngles" class="form-label fw-semibold">
                                        Nombre en Inglés
                                    </label>
                                    <input asp-for="NombreIngles"
                                           class="form-control"
                                           placeholder="Ej: Beach, Museum, Park"
                                           id="nombreInglesInput">
                                    <span asp-validation-for="NombreIngles" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <div>
                                    <label asp-for="DescripcionIngles" class="form-label fw-semibold">
                                        Descripción en Inglés
                                    </label>
                                    <textarea asp-for="DescripcionIngles"
                                              class="form-control"
                                              rows="4"
                                              placeholder="Description in English..."
                                              id="descripcionInglesInput"></textarea>
                                    <span asp-validation-for="DescripcionIngles" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div id="portugueseContent" style="display: none;">
                                <div class="mb-4">
                                    <label asp-for="NombrePortugues" class="form-label fw-semibold">
                                        Nombre en Portugués
                                    </label>
                                    <input asp-for="NombrePortugues"
                                           class="form-control"
                                           placeholder="Ej: Praia, Museu, Parque"
                                           id="nombrePortuguesInput">
                                    <span asp-validation-for="NombrePortugues" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <div>
                                    <label asp-for="DescripcionPortugues" class="form-label fw-semibold">
                                        Descripción en Portugués
                                    </label>
                                    <textarea asp-for="DescripcionPortugues"
                                              class="form-control"
                                              rows="4"
                                              placeholder="Descrição em português..."
                                              id="descripcionPortuguesInput"></textarea>
                                    <span asp-validation-for="DescripcionPortugues" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de continuar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="reset" class="btn btn-outline-primary btn-lg px-5">
                                <i class="fas fa-redo me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Crear Tipo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función simple para cambiar entre pestañas de idioma
        function showLanguageTab(language) {
            const englishContent = document.getElementById('englishContent');
            const portugueseContent = document.getElementById('portugueseContent');
            const englishBtn = document.querySelector('button[onclick="showLanguageTab(\'english\')"]');
            const portugueseBtn = document.querySelector('button[onclick="showLanguageTab(\'portuguese\')"]');

            if (language === 'english') {
                englishContent.style.display = 'block';
                portugueseContent.style.display = 'none';
                englishBtn.classList.add('active');
                portugueseBtn.classList.remove('active');
            } else if (language === 'portuguese') {
                englishContent.style.display = 'none';
                portugueseContent.style.display = 'block';
                englishBtn.classList.remove('active');
                portugueseBtn.classList.add('active');
            }
        }

        // Validación básica del formulario
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('typeForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const nombreInput = document.getElementById('nombreInput');
                    const submitBtn = document.getElementById('submitBtn');

                    // Validación simple
                    if (!nombreInput.value.trim()) {
                        e.preventDefault();
                        alert('Por favor, ingresa el nombre del tipo en español');
                        nombreInput.focus();
                        return false;
                    }

                    // Cambiar estado del botón
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creando...';
                        submitBtn.disabled = true;
                    }

                    return true;
                });
            }
        });
    </script>
}