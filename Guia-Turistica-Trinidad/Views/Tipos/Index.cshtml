@model IEnumerable<guia_turistico.Models.Tipos>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Tipos de Sitios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.NombreIngles)</th>
                <th>@Html.DisplayNameFor(model => model.NombrePortugues)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.DescripcionIngles)</th>
                <th>@Html.DisplayNameFor(model => model.DescripcionPortugues)</th>
                <th>@Html.DisplayNameFor(model => model.ImagenUrl)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreIngles)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombrePortugues)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionIngles)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescripcionPortugues)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagenUrl))
                        {
                            <img src="@item.ImagenUrl" alt="Imagen" class="img-thumbnail" style="width: 70px; height: 70px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Sin imagen</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.TipoId" class="btn btn-sm btn-warning me-2">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.TipoId" class="btn btn-sm btn-info me-2 text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.TipoId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
