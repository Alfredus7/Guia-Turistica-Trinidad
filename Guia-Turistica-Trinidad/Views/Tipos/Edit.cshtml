@model guia_turistico.Models.Tipos

@{
    ViewData["Title"] = "Editar Tipo de Sitio Turístico";
}

<div class="container py-4">
    <!-- Header con navegación - COHERENTE -->
    <div class="bg-primary-gradient text-white py-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-center text-md-start">
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="fas fa-edit me-2"></i>Editar Tipo de Sitio Turístico
                    </h1>
                    <p class="lead mb-0 opacity-75">Modifica la información de esta categoría de sitios turísticos</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario Principal - ESTRUCTURA COHERENTE -->
    <div class="container py-4">
        <form asp-action="Edit" id="typeForm" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="TipoId" />

            <!-- Sección de Imagen - ESTRUCTURA SIMILAR AL MAPA -->
            <div class="card shadow-lg mb-5 border-0 overflow-hidden">
                <div class="card-header card-header-gradient py-3">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-image me-2"></i>Imagen Representativa
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- URL de Imagen -->
                        <div class="col-lg-8">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-link me-2 text-primary"></i>URL de la Imagen
                                </h5>

                                <div class="mb-4">
                                    <div class="alert alert-info mb-3">
                                        <small>
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Instrucciones:</strong> Modifica la URL de la imagen que representa este tipo de sitio turístico. La vista previa se actualizará automáticamente.
                                        </small>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ImagenUrl" class="form-label fw-semibold">
                                            URL de Imagen
                                        </label>
                                        <input asp-for="ImagenUrl"
                                               class="form-control form-control-lg"
                                               placeholder="https://ejemplo.com/imagen-tipo.jpg"
                                               id="imageUrlInput"
                                               type="url">
                                        <span asp-validation-for="ImagenUrl" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            URL de una imagen que represente este tipo de sitio (playas, montañas, museos, etc.)
                                        </div>
                                    </div>

                                    <!-- Feedback en tiempo real -->
                                    <div class="alert alert-light border mt-3 d-none" id="urlFeedback">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-spinner fa-spin me-2 text-info" id="loadingIcon"></i>
                                            <span id="urlFeedbackText"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Panel de Vista Previa -->
                        <div class="col-lg-4 border-start bg-panel">
                            <div class="p-4">
                                <h5 class="fw-semibold mb-3">
                                    <i class="fas fa-eye me-2 text-primary"></i>Vista Previa
                                </h5>

                                <div class="border rounded-3 p-3 bg-light-subtle">
                                    <h6 class="fw-semibold mb-2 text-dark">
                                        <i class="fas fa-image me-2 text-success"></i>Imagen del Tipo
                                    </h6>

                                    <div class="ratio ratio-1x1 mb-3">
                                        <img src="@(!string.IsNullOrEmpty(Model.ImagenUrl) ? Model.ImagenUrl : "https://via.placeholder.com/400/6c757d/ffffff?text=Preview")"
                                             class="img-fluid rounded shadow-sm object-fit-cover"
                                             id="imagePreview"
                                             alt="Vista previa de la imagen"
                                             onerror="this.src='https://via.placeholder.com/400/6c757d/ffffff?text=Error+de+imagen'">
                                    </div>

                                    <div class="mt-3">
                                        <span class="badge badge-success px-3 py-2" id="imageStatus">
                                            <i class="fas fa-check-circle me-1"></i>Imagen cargada
                                        </span>
                                        <span class="badge badge-info px-3 py-2 ms-2" id="originalImageBadge" style="display: none;">
                                            <i class="fas fa-history me-1"></i>Imagen original
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Principal del Tipo - ESTRUCTURA DE 2 COLUMNAS COHERENTE -->
            <div class="row g-4 mb-4">
                <!-- Columna Izquierda - Información en Español -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-flag me-2"></i>Información en Español
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-2 text-muted"></i>Nombre del Tipo
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Playa, Museo, Parque"
                                       required
                                       id="nombreInput"
                                       maxlength="50">
                                <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">
                                    <span id="nombreCounter">@Model.Nombre?.Length/50</span> - Nombre en español del tipo de sitio
                                </div>
                            </div>

                            <div class="mb-0">
                                <label asp-for="Descripcion" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2 text-muted"></i>Descripción
                                </label>
                                <div class="position-relative">
                                    <textarea asp-for="Descripcion"
                                              class="form-control"
                                              rows="5"
                                              placeholder="Describe este tipo de sitio turístico en español..."
                                              id="descripcionInput"
                                              maxlength="500"></textarea>
                                    <div class="char-counter">@Model.Descripcion?.Length/500</div>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger small mt-1 d-block"></span>
                                <div class="form-text">Información detallada sobre este tipo de sitio</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Traducciones -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header border-bottom py-3">
                            <h4 class="h5 mb-0">
                                <i class="fas fa-language me-2"></i>Información Multilingüe
                            </h4>
                        </div>
                        <div class="card-body">
                            <!-- Pestañas para idiomas - COHERENTE CON SITIOS -->
                            <ul class="nav nav-tabs mb-4" id="langTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active text-dark"
                                            id="english-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#english"
                                            type="button"
                                            role="tab">
                                        <i class="fas fa-language me-1"></i> Inglés
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link text-dark"
                                            id="portuguese-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#portuguese"
                                            type="button"
                                            role="tab">
                                        <i class="fas fa-language me-1"></i> Portugués
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="langTabsContent">
                                <!-- Inglés -->
                                <div class="tab-pane fade show active"
                                     id="english"
                                     role="tabpanel"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombreIngles" class="form-label fw-semibold">
                                            Nombre en Inglés
                                        </label>
                                        <input asp-for="NombreIngles"
                                               class="form-control"
                                               placeholder="Ej: Beach, Museum, Park"
                                               id="nombreInglesInput"
                                               maxlength="50">
                                        <span asp-validation-for="NombreIngles" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            <span id="nombreInglesCounter">@Model.NombreIngles?.Length/50</span>
                                        </div>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionIngles" class="form-label fw-semibold">
                                            Descripción en Inglés
                                        </label>
                                        <div class="position-relative">
                                            <textarea asp-for="DescripcionIngles"
                                                      class="form-control"
                                                      rows="4"
                                                      placeholder="Description in English..."
                                                      id="descripcionInglesInput"
                                                      maxlength="500"></textarea>
                                            <div class="char-counter">@Model.DescripcionIngles?.Length/500</div>
                                        </div>
                                        <span asp-validation-for="DescripcionIngles" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <!-- Portugués -->
                                <div class="tab-pane fade"
                                     id="portuguese"
                                     role="tabpanel"
                                     tabindex="0">
                                    <div class="mb-4">
                                        <label asp-for="NombrePortugues" class="form-label fw-semibold">
                                            Nombre en Portugués
                                        </label>
                                        <input asp-for="NombrePortugues"
                                               class="form-control"
                                               placeholder="Ej: Praia, Museu, Parque"
                                               id="nombrePortuguesInput"
                                               maxlength="50">
                                        <span asp-validation-for="NombrePortugues" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text">
                                            <span id="nombrePortuguesCounter">@Model.NombrePortugues?.Length/50</span>
                                        </div>
                                    </div>

                                    <div>
                                        <label asp-for="DescripcionPortugues" class="form-label fw-semibold">
                                            Descripción en Portugués
                                        </label>
                                        <div class="position-relative">
                                            <textarea asp-for="DescripcionPortugues"
                                                      class="form-control"
                                                      rows="4"
                                                      placeholder="Descrição em português..."
                                                      id="descripcionPortuguesInput"
                                                      maxlength="500"></textarea>
                                            <div class="char-counter">@Model.DescripcionPortugues?.Length/500</div>
                                        </div>
                                        <span asp-validation-for="DescripcionPortugues" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones - COHERENTE -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h5 class="fw-semibold mb-1">¿Estás listo para guardar los cambios?</h5>
                            <p class="text-muted small mb-0">
                                Verifica que toda la información sea correcta antes de actualizar
                            </p>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="button" class="btn btn-primary btn-lg px-5" onclick="formManager.restoreOriginal()">
                                <i class="fas fa-undo me-2"></i>Restaurar Original
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Actualizar Tipo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/imageUrlValidator.js" asp-append-version="true"></script>
    <script>
        // Módulo para manejo del formulario de tipos - COHERENTE
        const formManager = {
            originalData: {},
            formModified: false,
            imageChanged: false,

            init() {
                // Guardar datos originales
                this.saveOriginalData();
                this.initCharCounters();
                this.initImagePreview();
                this.initFormValidation();
                this.initTooltips();
                this.initAutoCapitalize();
                this.initChangeDetection();
                this.cleanLocalStorage();
            },

            saveOriginalData() {
                // Guardar todos los valores originales del formulario
                const form = document.getElementById('typeForm');
                const formData = new FormData(form);
                this.originalData = {};

                for (let [key, value] of formData.entries()) {
                    this.originalData[key] = value;
                }

                // Guardar también la URL de imagen original
                this.originalData['ImagenUrl'] = '@Model.ImagenUrl';
            },

            initCharCounters() {
                const fields = [
                    { id: 'nombreInput', counterId: 'nombreCounter', max: 50 },
                    { id: 'nombreInglesInput', counterId: 'nombreInglesCounter', max: 50 },
                    { id: 'nombrePortuguesInput', counterId: 'nombrePortuguesCounter', max: 50 },
                    { id: 'descripcionInput', max: 500 },
                    { id: 'descripcionInglesInput', max: 500 },
                    { id: 'descripcionPortuguesInput', max: 500 }
                ];

                fields.forEach(field => {
                    const element = document.getElementById(field.id);
                    if (element) {
                        const counter = field.counterId ?
                            document.getElementById(field.counterId) :
                            element.parentNode.querySelector('.char-counter');

                        const updateCounter = () => {
                            const length = element.value.length;
                            if (counter) {
                                counter.textContent = `${length}/${field.max}`;
                                if (length > field.max * 0.9) {
                                    counter.style.color = 'var(--warning-color)';
                                } else if (length > field.max) {
                                    counter.style.color = 'var(--danger-color)';
                                } else {
                                    counter.style.color = 'var(--neutral-dark)';
                                }
                            }

                            if (length > field.max) {
                                element.classList.add('is-invalid');
                            } else {
                                element.classList.remove('is-invalid');
                            }

                            // Detectar cambios
                            this.checkForChanges();
                        };

                        element.addEventListener('input', updateCounter);
                        element.addEventListener('blur', updateCounter);
                        updateCounter();
                    }
                });
            },

            initImagePreview() {
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');
                const urlFeedback = document.getElementById('urlFeedback');
                const loadingIcon = document.getElementById('loadingIcon');
                const imageStatus = document.getElementById('imageStatus');
                const originalImageBadge = document.getElementById('originalImageBadge');

                // Configurar validación en tiempo real usando el validador externo
                imageUrlValidator.setupRealTimeValidation(
                    imageUrlInput,
                    imagePreview,
                    urlFeedback,
                    loadingIcon,
                    imageStatus
                );

                // Detectar cambios en la URL de la imagen
                imageUrlInput.addEventListener('input', () => {
                    this.checkForChanges();
                    this.updateImageBadge();
                });

                // Inicializar badge de imagen
                this.updateImageBadge();
            },

            updateImageBadge() {
                const originalImageBadge = document.getElementById('originalImageBadge');
                const currentImageUrl = document.getElementById('imageUrlInput').value;
                const originalImageUrl = this.originalData['ImagenUrl'] || '';

                if (currentImageUrl !== originalImageUrl && currentImageUrl.trim() !== '') {
                    originalImageBadge.style.display = 'inline-block';
                    this.imageChanged = true;
                } else {
                    originalImageBadge.style.display = 'none';
                    this.imageChanged = false;
                }
            },

            initChangeDetection() {
                // Detectar cambios en todos los campos
                const form = document.getElementById('typeForm');
                const inputs = form.querySelectorAll('input, textarea, select');

                inputs.forEach(input => {
                    input.addEventListener('input', () => this.checkForChanges());
                    input.addEventListener('change', () => this.checkForChanges());
                });
            },

            checkForChanges() {
                let hasChanges = false;
                const form = document.getElementById('typeForm');
                const formData = new FormData(form);

                for (let [key, value] of formData.entries()) {
                    if (this.originalData[key] !== value) {
                        hasChanges = true;
                        break;
                    }
                }

                // Verificar imagen
                const currentImageUrl = document.getElementById('imageUrlInput').value;
                if (currentImageUrl !== this.originalData['ImagenUrl']) {
                    hasChanges = true;
                }

                this.formModified = hasChanges;
                return hasChanges;
            },

            initFormValidation() {
                const form = document.getElementById('typeForm');
                const submitBtn = document.getElementById('submitBtn');

                form.addEventListener('submit', (e) => {
                    // Validar nombre en español (campo requerido)
                    const spanishNameInput = document.getElementById('nombreInput');
                    if (!spanishNameInput.value.trim()) {
                        e.preventDefault();
                        this.showValidationError('El nombre en español es requerido', spanishNameInput);
                        return false;
                    }

                    // Mostrar estado de carga
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Actualizando...';
                    submitBtn.disabled = true;
                    submitBtn.classList.add('btn-loading');
                    return true;
                });
            },

            showValidationError(message, element) {
                element.classList.add('is-invalid');
                alert(message);
                element.scrollIntoView({ behavior: 'smooth', block: 'center' });
                element.focus();
            },

            initTooltips() {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            },

            initAutoCapitalize() {
                const nameInputs = ['nombreInput', 'nombreInglesInput', 'nombrePortuguesInput'];
                nameInputs.forEach(id => {
                    const input = document.getElementById(id);
                    if (input) {
                        input.addEventListener('blur', function() {
                            if (this.value.trim()) {
                                this.value = this.value.trim().charAt(0).toUpperCase() + this.value.trim().slice(1);
                            }
                        });
                    }
                });
            },

            cleanLocalStorage() {
                localStorage.removeItem('tipoSitioEditDraft');
                const keys = Object.keys(localStorage);
                keys.forEach(key => {
                    if (key.includes('tipo') || key.includes('borrador') || key.includes('draft')) {
                        localStorage.removeItem(key);
                    }
                });
            },

            restoreOriginal() {
                if (this.checkForChanges()) {
                    if (!confirm('¿Estás seguro de que deseas restaurar los valores originales? Se perderán todos los cambios no guardados.')) {
                        return;
                    }
                }

                // Restaurar valores del formulario desde originalData
                for (const [key, value] of Object.entries(this.originalData)) {
                    const element = document.querySelector(`[name="${key}"]`);
                    if (element) {
                        element.value = value;
                    }
                }

                // Restaurar imagen específicamente
                const imageUrlInput = document.getElementById('imageUrlInput');
                const imagePreview = document.getElementById('imagePreview');
                const originalImageUrl = this.originalData['ImagenUrl'] || '';

                imageUrlInput.value = originalImageUrl;

                if (originalImageUrl) {
                    imagePreview.src = originalImageUrl;
                    const imageStatus = document.getElementById('imageStatus');
                    imageStatus.innerHTML = '<i class="fas fa-check-circle me-1"></i>Imagen cargada';
                    imageStatus.className = 'badge badge-success px-3 py-2';
                } else {
                    imagePreview.src = 'https://via.placeholder.com/400/6c757d/ffffff?text=Preview';
                    const imageStatus = document.getElementById('imageStatus');
                    imageStatus.innerHTML = '<i class="fas fa-image me-1"></i>Esperando URL';
                    imageStatus.className = 'badge badge-success px-3 py-2';
                }

                // Ocultar feedback de validación
                const urlFeedback = document.getElementById('urlFeedback');
                if (urlFeedback) {
                    urlFeedback.classList.add('d-none');
                }

                // Ocultar badge de imagen original
                const originalImageBadge = document.getElementById('originalImageBadge');
                originalImageBadge.style.display = 'none';
                this.imageChanged = false;

                // Restaurar contadores
                this.initCharCounters();

                // Limpiar validaciones
                document.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });

                const submitBtn = document.getElementById('submitBtn');
                submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>Actualizar Tipo';
                submitBtn.disabled = false;
                submitBtn.classList.remove('btn-loading');

                this.formModified = false;
            }
        };

        // Inicialización cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            formManager.init();
        });
    </script>
}