<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Guía Turística</title>

    <!-- Evitar traducción automática -->
    <meta name="google" content="notranslate">
    <meta name="robots" content="notranslate">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/guia_turistico.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-map-marked-alt me-2"></i>Guía Turística de Trinidad
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Inicio
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Mapa">
                            <i class="fas fa-map me-1"></i>Mapa
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning fw-semibold" href="#"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-tools me-1"></i>Administración
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li>
                                    <a class="dropdown-item" asp-controller="ImagenesSitios" asp-action="Index">
                                        <i class="fas fa-images me-2"></i>Gestión de Imágenes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Comentarios" asp-action="Index">
                                        <i class="fas fa-comments me-2"></i>Gestión de Comentarios
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Tipos" asp-action="Index">
                                        <i class="fas fa-tags me-2"></i>Tipos de Tours
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="SitiosTuristicos" asp-action="Index">
                                        <i class="fas fa-landmark me-2"></i>Lugares Turísticos
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <!-- Selector de idioma -->
                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-language me-1"></i>
                            <span id="currentLanguageText">
                                @{
                                    var currentLang = Context.Request.Cookies["selectedLanguage"] ?? "es";
                                    <text>
                                        @(currentLang == "en" ? "English" :
                                                                            currentLang == "pt" ? "Português" : "Español")
                                </text>
                                                                }
                            </span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li>
                                <a class="dropdown-item language-option @(currentLang == "es" ? "active" : "")"
                                   href="#" data-lang="es">🇪🇸 Español</a>
                            </li>
                            <li>
                                <a class="dropdown-item language-option @(currentLang == "en" ? "active" : "")"
                                   href="#" data-lang="en">🇺🇸 English</a>
                            </li>
                            <li>
                                <a class="dropdown-item language-option @(currentLang == "pt" ? "active" : "")"
                                   href="#" data-lang="pt">🇵🇹 Português</a>
                            </li>
                        </ul>
                    </li>

                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <main class="container flex-fill py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container small">
            <p class="mb-2">
                &copy; 2025 Guía Turística de Trinidad |
                <a class="text-warning text-decoration-none" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
            </p>

            <p class="mb-0">
                Síguenos:
                <a href="#" class="text-white mx-2"><i class="fab fa-facebook me-1"></i>Facebook</a>
                <a href="#" class="text-white mx-2"><i class="fab fa-instagram me-1"></i>Instagram</a>
                <a href="#" class="text-white mx-2"><i class="fab fa-twitter me-1"></i>Twitter</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Script de idioma (mejor organizado)
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.language-option').forEach(opt => {
                opt.addEventListener('click', e => {
                    e.preventDefault();
                    const lang = opt.getAttribute('data-lang');
                    localStorage.setItem('selectedLanguage', lang);
                    document.cookie = `selectedLanguage=${lang}; path=/; max-age=31536000`;
                    location.reload();
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
